<UserControl
    x:Class="Atc.Wpf.Controls.Sample.Samples.LabelControls.LabelMixView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <atc:AutoGrid
        d:Background="White"
        Columns="*"
        Rows="Auto,*">

        <GroupBox Padding="10" Header="Features" />

        <GroupBox Header="Usage">
            <ScrollViewer>

                <atc:GridEx Columns="*,*" ShowGridLines="True">

                    <atc:GridEx Grid.Column="0" Rows="Auto,Auto,Auto,Auto,Auto,Auto">
                        <atc:LabelCheckBox
                            Grid.Row="0"
                            InformationText="This is a help text.."
                            IsMandatory="True"
                            LabelText="MyCheckBox"
                            Orientation="Horizontal" />
                        <atc:LabelComboBox
                            Grid.Row="1"
                            InformationText="This is a help text.."
                            IsMandatory="True"
                            LabelText="MyComboBox"
                            Orientation="Horizontal" />
                        <atc:LabelTextBox
                            Grid.Row="2"
                            InformationText="This is a help text.."
                            IsMandatory="True"
                            LabelText="MyTextBox"
                            Orientation="Horizontal"
                            Text="Hello" />
                        <atc:LabelTextInfo
                            Grid.Row="3"
                            InformationText="This is a help text.."
                            LabelText="MyTextInfo"
                            Orientation="Horizontal"
                            Text="Hello" />
                        <atc:LabelTextBox
                            Grid.Row="4"
                            InformationText="This is a help text.."
                            IsMandatory="True"
                            LabelText="MyTextBox"
                            Orientation="Horizontal"
                            Text="Hello" />
                        <atc:LabelWellKnownColorSelector
                            Grid.Row="5"
                            InformationText="This is a help text.."
                            Orientation="Horizontal" />
                    </atc:GridEx>

                    <atc:GridEx Grid.Column="1" Rows="Auto,Auto,Auto,Auto,Auto,Auto">
                        <atc:LabelCheckBox
                            Grid.Row="0"
                            InformationText="This is a help text.."
                            IsMandatory="True"
                            LabelText="MyCheckBox"
                            Orientation="Vertical" />
                        <atc:LabelComboBox
                            Grid.Row="1"
                            InformationText="This is a help text.."
                            IsMandatory="True"
                            LabelText="MyComboBox"
                            Orientation="Vertical" />
                        <atc:LabelTextBox
                            Grid.Row="2"
                            InformationText="This is a help text.."
                            IsMandatory="True"
                            LabelText="MyTextBox"
                            Orientation="Vertical"
                            Text="Hello" />
                        <atc:LabelTextInfo
                            Grid.Row="3"
                            InformationText="This is a help text.."
                            LabelText="MyTextInfo"
                            Orientation="Vertical"
                            Text="Hello" />
                        <atc:LabelTextBox
                            Grid.Row="4"
                            InformationText="This is a help text.."
                            IsMandatory="True"
                            LabelText="MyTextBox"
                            Orientation="Vertical"
                            Text="Hello" />
                        <atc:LabelWellKnownColorSelector
                            Grid.Row="5"
                            InformationText="This is a help text.."
                            Orientation="Horizontal" />
                    </atc:GridEx>

                </atc:GridEx>

            </ScrollViewer>
        </GroupBox>
    </atc:AutoGrid>

</UserControl>
