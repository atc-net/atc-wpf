<UserControl
    x:Class="Atc.Wpf.Controls.Sample.Samples.LabelControls.LabelWellKnownColorSelectorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <atc:AutoGrid Columns="*" Rows="Auto,*">

        <GroupBox
            Margin="0,0,0,10"
            Padding="10"
            Header="Features" />

        <GroupBox Header="Usage">
            <ScrollViewer>
                <atc:GridEx Columns="*,*" ShowGridLines="True">
                    <StackPanel Grid.Column="0" Margin="10">

                        <atc:LabelWellKnownColorSelector Orientation="Horizontal" />

                        <atc:LabelWellKnownColorSelector
                            Orientation="Horizontal"
                            SelectedKey="Red"
                            ShowHexCode="True" />

                        <atc:LabelWellKnownColorSelector
                            InformationText="This is a help text.."
                            LabelText="MyColor"
                            Orientation="Horizontal"
                            SelectedKey="Red" />

                        <atc:LabelWellKnownColorSelector
                            InformationText="This is a help text.."
                            LabelWidthNumber="50"
                            LabelWidthSizeDefinition="Percentage"
                            Orientation="Horizontal"
                            SelectedKey="Red" />

                        <atc:LabelWellKnownColorSelector
                            InformationText="This is a help text.."
                            LabelWidthNumber="120"
                            LabelWidthSizeDefinition="Pixel"
                            Orientation="Horizontal"
                            SelectedKey="Red" />

                        <atc:LabelWellKnownColorSelector
                            HideAreas="All"
                            InformationText="This is a help text.."
                            IsMandatory="True"
                            LabelWidthNumber="120"
                            LabelWidthSizeDefinition="Pixel"
                            Orientation="Horizontal"
                            SelectedKey="Red" />

                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="10">

                        <atc:LabelWellKnownColorSelector Orientation="Vertical" />

                        <atc:LabelWellKnownColorSelector
                            Orientation="Vertical"
                            SelectedKey="Red"
                            ShowHexCode="True" />

                        <atc:LabelWellKnownColorSelector
                            InformationText="This is a help text.."
                            LabelText="MyColor"
                            Orientation="Vertical"
                            SelectedKey="Red" />

                    </StackPanel>
                </atc:GridEx>
            </ScrollViewer>
        </GroupBox>
    </atc:AutoGrid>

</UserControl>
