<UserControl
    x:Class="Atc.Wpf.Controls.Sample.Samples.Notifications.ToastNotificationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:notifications="clr-namespace:Atc.Wpf.Controls.Sample.Samples.Notifications"
    x:Name="UcBusyOverlayView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <notifications:ToastNotificationViewModel />
    </UserControl.DataContext>

    <atc:AutoGrid Columns="*" Rows="Auto,*">

        <GroupBox
            Margin="0,0,0,10"
            Padding="10"
            Header="Features" />

        <GroupBox Header="Usage">
            <DockPanel Margin="50">

                <atc:UniformSpacingPanel Orientation="Vertical" Spacing="50">
                    <GroupBox Padding="20" Header="Window">
                        <atc:UniformSpacingPanel
                            ItemWidth="100"
                            Orientation="Horizontal"
                            Spacing="10">
                            <Button
                                Command="{Binding WindowInformationCommand}"
                                Content="Information"
                                Style="{StaticResource ButtonInfo}" />
                            <Button
                                Command="{Binding WindowSuccessCommand}"
                                Content="Success"
                                Style="{StaticResource ButtonSuccess}" />
                            <Button
                                Command="{Binding WindowWarningCommand}"
                                Content="Warning"
                                Style="{StaticResource ButtonWarning}" />
                            <Button
                                Command="{Binding WindowErrorCommand}"
                                Content="Error"
                                Style="{StaticResource ButtonDanger}" />
                        </atc:UniformSpacingPanel>
                    </GroupBox>

                    <GroupBox Padding="20" Header="Desktop">
                        <atc:UniformSpacingPanel
                            ItemWidth="100"
                            Orientation="Horizontal"
                            Spacing="10">
                            <Button
                                Command="{Binding DesktopInformationCommand}"
                                Content="Information"
                                Style="{StaticResource ButtonInfo}" />
                            <Button
                                Command="{Binding DesktopSuccessCommand}"
                                Content="Success"
                                Style="{StaticResource ButtonSuccess}" />
                            <Button
                                Command="{Binding DesktopWarningCommand}"
                                Content="Warning"
                                Style="{StaticResource ButtonWarning}" />
                            <Button
                                Command="{Binding DesktopErrorCommand}"
                                Content="Error"
                                Style="{StaticResource ButtonDanger}" />
                        </atc:UniformSpacingPanel>
                    </GroupBox>
                </atc:UniformSpacingPanel>

                <atc:ToastNotificationArea
                    x:Name="WindowArea"
                    MaxItems="3"
                    Position="TopLeft" />
            </DockPanel>
        </GroupBox>

    </atc:AutoGrid>

</UserControl>