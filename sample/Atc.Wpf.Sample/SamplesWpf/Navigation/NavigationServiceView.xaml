<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpf.Navigation.NavigationServiceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:navigation="clr-namespace:Atc.Wpf.Sample.SamplesWpf.Navigation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <navigation:NavigationServiceViewModel />
    </UserControl.DataContext>

    <atc:AutoGrid Columns="*" Rows="Auto,*">

        <GroupBox
            Margin="0,0,0,10"
            Padding="10"
            Header="Features">
            <TextBlock TextWrapping="Wrap">
                The INavigationService interface provides ViewModel-based navigation with history support.
                It supports navigation guards (INavigationGuard) and navigation awareness (INavigationAware)
                for ViewModels that need to respond to navigation events.
                Try changing settings in the Settings page â€” navigation will be blocked until changes are reverted.
            </TextBlock>
        </GroupBox>

        <GroupBox Header="Usage">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Navigation Buttons -->
                <atc:UniformSpacingPanel
                    Grid.Row="0"
                    Margin="10"
                    Orientation="Horizontal"
                    Spacing="10">

                    <Button
                        Command="{Binding GoBackCommand}"
                        Content="Back"
                        MinWidth="80" />

                    <Button
                        Command="{Binding GoForwardCommand}"
                        Content="Forward"
                        MinWidth="80" />

                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />

                    <Button
                        Command="{Binding NavigateToHomeCommand}"
                        Content="Home"
                        MinWidth="80" />

                    <Button
                        Command="{Binding NavigateToSettingsCommand}"
                        Content="Settings"
                        MinWidth="80" />

                    <Button
                        Command="{Binding NavigateToDetailsCommand}"
                        Content="Details (with param)"
                        MinWidth="120" />

                </atc:UniformSpacingPanel>

                <!-- Content Area -->
                <Border
                    Grid.Row="1"
                    Margin="10"
                    BorderBrush="{DynamicResource AtcApps.Brushes.Gray8}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="10">
                    <ContentControl Content="{Binding CurrentView}" />
                </Border>

                <!-- Status Bar -->
                <Border
                    Grid.Row="2"
                    Margin="10,0,10,10"
                    Background="{DynamicResource AtcApps.Brushes.Gray10}"
                    CornerRadius="4"
                    Padding="10,5">
                    <TextBlock Text="{Binding NavigationStatus}" />
                </Border>

            </Grid>
        </GroupBox>
    </atc:AutoGrid>

</UserControl>
