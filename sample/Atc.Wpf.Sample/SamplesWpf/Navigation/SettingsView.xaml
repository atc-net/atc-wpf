<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpf.Navigation.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:atcValueConverters="https://github.com/atc-net/atc-wpf/tree/main/schemas/value-converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:navigation="clr-namespace:Atc.Wpf.Sample.SamplesWpf.Navigation"
    d:DataContext="{d:DesignInstance Type=navigation:SettingsViewModel}"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <StackPanel Margin="20">
        <TextBlock
            FontSize="24"
            FontWeight="Bold"
            Text="Settings" />

        <atc:UniformSpacingPanel
            Margin="0,20,0,0"
            Orientation="Vertical"
            Spacing="15">

            <CheckBox
                Content="Enable Notifications"
                IsChecked="{Binding NotificationsEnabled}" />

            <StackPanel Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    Text="Theme: " />
                <ComboBox
                    MinWidth="100"
                    SelectedItem="{Binding Theme}">
                    <ComboBoxItem Content="Light" />
                    <ComboBoxItem Content="Dark" />
                </ComboBox>
            </StackPanel>

        </atc:UniformSpacingPanel>

        <TextBlock
            Margin="0,20,0,0"
            FontWeight="SemiBold"
            Foreground="OrangeRed"
            Text="Unsaved changes â€” navigation is blocked"
            Visibility="{Binding HasUnsavedChanges, Converter={x:Static atcValueConverters:BoolToVisibilityVisibleValueConverter.Instance}}" />
    </StackPanel>

</UserControl>
