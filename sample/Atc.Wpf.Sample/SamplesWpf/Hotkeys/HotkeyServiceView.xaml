<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpf.Hotkeys.HotkeyServiceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hotkeys="clr-namespace:Atc.Wpf.Sample.SamplesWpf.Hotkeys"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="900"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <hotkeys:HotkeyServiceViewModel />
    </UserControl.DataContext>

    <atc:AutoGrid Columns="*" Rows="Auto,*">

        <GroupBox
            Margin="0,0,0,10"
            Padding="10"
            Header="Features">
            <TextBlock TextWrapping="Wrap">
                The IHotkeyService interface provides MVVM-friendly keyboard shortcut management
                with support for global (system-wide) and local (window-scoped) hotkeys,
                two-stroke chord sequences, and conflict detection.
            </TextBlock>
        </GroupBox>

        <GroupBox Header="Usage">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <atc:UniformSpacingPanel
                    Margin="20"
                    Orientation="Vertical"
                    Spacing="12">

                    <!-- Status -->
                    <TextBlock
                        FontWeight="SemiBold"
                        Text="{Binding StatusText, StringFormat='Status: {0}'}" />

                    <Separator />

                    <!-- Lifecycle -->
                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Lifecycle" />

                    <WrapPanel>
                        <Button
                            MinWidth="160"
                            Margin="0,0,8,0"
                            Command="{Binding ToggleListeningCommand}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Content" Value="Start Listening" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsListening}" Value="True">
                                            <Setter Property="Content" Value="Stop Listening" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </WrapPanel>

                    <Separator />

                    <!-- Registration -->
                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Registration" />

                    <WrapPanel>
                        <Button
                            MinWidth="200"
                            Margin="0,0,8,0"
                            Command="{Binding RegisterGlobalHotkeyCommand}"
                            Content="Register Ctrl+Shift+H (Global)" />
                        <Button
                            MinWidth="200"
                            Margin="0,0,8,0"
                            Command="{Binding RegisterLocalHotkeyCommand}"
                            Content="Register Ctrl+G (Local)" />
                    </WrapPanel>

                    <WrapPanel>
                        <Button
                            MinWidth="200"
                            Margin="0,0,8,0"
                            Command="{Binding RegisterChordCommand}"
                            Content="Register Chord Ctrl+K, Ctrl+T" />
                        <Button
                            MinWidth="200"
                            Margin="0,0,8,0"
                            Command="{Binding TriggerConflictCommand}"
                            Content="Register Conflicting Hotkey" />
                    </WrapPanel>

                    <WrapPanel>
                        <Button
                            MinWidth="200"
                            Margin="0,0,8,0"
                            Command="{Binding UnregisterAllCommand}"
                            Content="Unregister All" />
                        <Button
                            MinWidth="200"
                            Margin="0,0,8,0"
                            Command="{Binding SaveBindingsCommand}"
                            Content="Save Bindings" />
                        <Button
                            MinWidth="200"
                            Margin="0,0,8,0"
                            Command="{Binding LoadBindingsCommand}"
                            Content="Load Bindings" />
                    </WrapPanel>

                    <Separator />

                    <!-- Registered Hotkeys -->
                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Registered Hotkeys" />

                    <ListBox
                        MaxHeight="150"
                        ItemsSource="{Binding RegisteredHotkeys}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run FontWeight="SemiBold" Text="{Binding Description, Mode=OneWay}" />
                                    <Run Text=" [" /><Run Text="{Binding Scope, Mode=OneWay}" /><Run Text="]" />
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Separator />

                    <!-- Event Log -->
                    <atc:GridEx Columns="*,Auto" Rows="Auto">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="Event Log" />
                        <Button
                            Grid.Column="1"
                            MinWidth="100"
                            Command="{Binding ClearLogCommand}"
                            Content="Clear Log" />
                    </atc:GridEx>

                    <ListBox
                        MaxHeight="200"
                        ItemsSource="{Binding EventLog}" />

                </atc:UniformSpacingPanel>
            </ScrollViewer>
        </GroupBox>
    </atc:AutoGrid>

</UserControl>
