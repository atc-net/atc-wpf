<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpf.Clipboard.ClipboardServiceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:atcValueConverters="https://github.com/atc-net/atc-wpf/tree/main/schemas/value-converters"
    xmlns:clipboard="clr-namespace:Atc.Wpf.Sample.SamplesWpf.Clipboard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="900"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <clipboard:ClipboardServiceViewModel />
    </UserControl.DataContext>

    <atc:AutoGrid Columns="*" Rows="Auto,*">

        <GroupBox
            Margin="0,0,0,10"
            Padding="10"
            Header="Features">
            <TextBlock TextWrapping="Wrap">
                The IClipboardService interface provides MVVM-friendly clipboard operations
                with support for text, images, and file drop lists. It includes clipboard history
                tracking and real-time change monitoring via a Win32 clipboard listener.
            </TextBlock>
        </GroupBox>

        <GroupBox Header="Usage">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <atc:UniformSpacingPanel
                    Margin="20"
                    Orientation="Vertical"
                    Spacing="12">

                    <!-- Status -->
                    <TextBlock
                        FontWeight="SemiBold"
                        Text="{Binding StatusText, StringFormat='Status: {0}'}" />

                    <Separator />

                    <!-- Text Operations -->
                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Text Operations" />

                    <WrapPanel>
                        <Button
                            MinWidth="140"
                            Margin="0,0,8,0"
                            Command="{Binding CopyTextCommand}"
                            Content="Copy Text" />
                        <Button
                            MinWidth="140"
                            Margin="0,0,8,0"
                            Command="{Binding PasteTextCommand}"
                            Content="Paste Text" />
                    </WrapPanel>

                    <TextBlock
                        Foreground="Gray"
                        Text="{Binding PastedText, TargetNullValue='(no text pasted yet)'}"
                        TextTrimming="CharacterEllipsis" />

                    <Separator />

                    <!-- Image Operations -->
                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Image Operations" />

                    <WrapPanel>
                        <Button
                            MinWidth="140"
                            Margin="0,0,8,0"
                            Command="{Binding CopyImageCommand}"
                            Content="Copy Image" />
                        <Button
                            MinWidth="140"
                            Margin="0,0,8,0"
                            Command="{Binding PasteImageCommand}"
                            Content="Paste Image" />
                    </WrapPanel>

                    <Border
                        MaxWidth="200"
                        MaxHeight="200"
                        HorizontalAlignment="Left"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="4"
                        Visibility="{Binding PastedImage, Converter={x:Static atcValueConverters:ObjectNotNullToVisibilityVisibleValueConverter.Instance}}">
                        <Image Source="{Binding PastedImage}" Stretch="Uniform" />
                    </Border>

                    <Separator />

                    <!-- Clear and Monitor -->
                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Actions" />

                    <WrapPanel>
                        <Button
                            MinWidth="140"
                            Margin="0,0,8,0"
                            Command="{Binding ClearClipboardCommand}"
                            Content="Clear Clipboard" />
                        <Button
                            MinWidth="170"
                            Margin="0,0,8,0"
                            Command="{Binding ToggleMonitoringCommand}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Content" Value="Start Monitoring" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMonitoring}" Value="True">
                                            <Setter Property="Content" Value="Stop Monitoring" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </WrapPanel>

                    <Separator />

                    <!-- Monitor Log -->
                    <atc:GridEx Columns="*,Auto" Rows="Auto">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Text="Monitor Log"
                            VerticalAlignment="Center" />
                        <Button
                            Grid.Column="1"
                            MinWidth="100"
                            Command="{Binding ClearLogCommand}"
                            Content="Clear Log" />
                    </atc:GridEx>

                    <ListBox
                        MaxHeight="150"
                        ItemsSource="{Binding MonitorLog}" />

                    <Separator />

                    <!-- History -->
                    <atc:GridEx Columns="*,Auto" Rows="Auto">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Text="Clipboard History"
                            VerticalAlignment="Center" />
                        <Button
                            Grid.Column="1"
                            MinWidth="100"
                            Command="{Binding ClearHistoryCommand}"
                            Content="Clear History" />
                    </atc:GridEx>

                    <ListBox
                        MaxHeight="200"
                        ItemsSource="{Binding HistoryEntries}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run FontWeight="SemiBold" Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}', Mode=OneWay}" />
                                    <Run Text=" [" /><Run Text="{Binding DataType, Mode=OneWay}" /><Run Text="] " />
                                    <Run Foreground="Gray" Text="{Binding Summary, Mode=OneWay}" />
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </atc:UniformSpacingPanel>
            </ScrollViewer>
        </GroupBox>
    </atc:AutoGrid>

</UserControl>
