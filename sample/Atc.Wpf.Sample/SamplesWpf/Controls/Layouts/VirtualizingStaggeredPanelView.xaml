<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpf.Controls.Layouts.VirtualizingStaggeredPanelView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="UcVirtualizingStaggeredPanelView"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <atc:AutoGrid Columns="*" Rows="Auto,*">

        <GroupBox
            Margin="0,0,0,10"
            Padding="10"
            Header="Features">
            <atc:UniformSpacingPanel Orientation="Vertical" Spacing="5">
                <atc:LabelSlider
                    x:Name="LsDesiredItemWidth"
                    LabelText="DesiredItemWidth"
                    Maximum="400"
                    Minimum="50"
                    Value="150" />
                <atc:LabelSlider
                    x:Name="LsHorizontalSpacing"
                    LabelText="HorizontalSpacing"
                    Maximum="50"
                    Value="10" />
                <atc:LabelSlider
                    x:Name="LsVerticalSpacing"
                    LabelText="VerticalSpacing"
                    Maximum="50"
                    Value="10" />
                <atc:LabelSlider
                    x:Name="LsItemCount"
                    LabelText="Item Count"
                    Maximum="10000"
                    Minimum="10"
                    Value="1000" />
                <TextBlock
                    Margin="0,5,0,0"
                    FontStyle="Italic"
                    Foreground="Gray"
                    Text="Note: VirtualizingStaggeredPanel only creates UI elements for visible items, enabling smooth scrolling with thousands of items." />
            </atc:UniformSpacingPanel>
        </GroupBox>

        <GroupBox Header="Usage (Virtualized - scroll to see performance)">
            <ItemsControl
                x:Name="ItemsControlPanel"
                VirtualizingPanel.CacheLength="2"
                VirtualizingPanel.CacheLengthUnit="Page"
                VirtualizingPanel.IsVirtualizing="True"
                VirtualizingPanel.ScrollUnit="Pixel"
                VirtualizingPanel.VirtualizationMode="Recycling">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <atc:VirtualizingStaggeredPanel
                            Padding="10"
                            DesiredItemWidth="{Binding ElementName=LsDesiredItemWidth, Path=Value}"
                            HorizontalSpacing="{Binding ElementName=LsHorizontalSpacing, Path=Value}"
                            VerticalSpacing="{Binding ElementName=LsVerticalSpacing, Path=Value}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            MinHeight="{Binding Height}"
                            Background="{Binding Color}"
                            BorderBrush="DarkGray"
                            BorderThickness="1"
                            CornerRadius="4">
                            <StackPanel
                                Margin="8"
                                VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="White"
                                    Text="{Binding Title}" />
                                <TextBlock
                                    FontSize="11"
                                    Foreground="WhiteSmoke"
                                    Opacity="0.8"
                                    Text="{Binding Description}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.Template>
                    <ControlTemplate TargetType="ItemsControl">
                        <ScrollViewer
                            CanContentScroll="True"
                            HorizontalScrollBarVisibility="Disabled"
                            VerticalScrollBarVisibility="Auto">
                            <ItemsPresenter />
                        </ScrollViewer>
                    </ControlTemplate>
                </ItemsControl.Template>
            </ItemsControl>
        </GroupBox>

    </atc:AutoGrid>

</UserControl>
