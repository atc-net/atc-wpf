<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpfTheming.Misc.DataGridView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="UcDataGridView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <atc:AutoGrid Columns="*" Rows="Auto,*">

        <GroupBox
            Margin="0,0,0,10"
            Padding="10"
            Header="Features">
            <TextBlock TextWrapping="Wrap">
                DataGrid with themed styles including alternating row colors, selection highlighting, hover effects, and double-click command binding.
            </TextBlock>
        </GroupBox>

        <GroupBox Header="Usage">

            <atc:GridEx Columns="*,10,*" ShowGridLines="True">

                <atc:GridEx
                    Grid.Column="0"
                    Margin="10"
                    Rows="*,10,*">

                    <DataGrid
                        Grid.Row="0"
                        ItemsSource="{Binding Items, ElementName=UcDataGridView}"
                        SelectedItem="{Binding SelectedItem, ElementName=UcDataGridView, Mode=TwoWay}">
                        <DataGrid.InputBindings>
                            <MouseBinding
                                Command="{Binding DoubleClickCommand, ElementName=UcDataGridView}"
                                Gesture="LeftDoubleClick" />
                        </DataGrid.InputBindings>
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Binding="{Binding FirstName}"
                                Header="First-Name"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Binding="{Binding LastName}"
                                Header="Last-Name"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Binding="{Binding Age}"
                                Header="Age"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Binding="{Binding MyAddress}"
                                Header="Address"
                                IsReadOnly="True" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <DataGrid
                        Grid.Row="2"
                        atc:ItemHelper.DisableAlternatingRowColoring="True"
                        ItemsSource="{Binding Items, ElementName=UcDataGridView}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Binding="{Binding FirstName}"
                                Header="First-Name"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Binding="{Binding LastName}"
                                Header="Last-Name"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Binding="{Binding Age}"
                                Header="Age"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Binding="{Binding MyAddress}"
                                Header="Address"
                                IsReadOnly="True" />
                        </DataGrid.Columns>
                    </DataGrid>

                </atc:GridEx>

                <atc:GridEx
                    Grid.Column="2"
                    Margin="10"
                    Rows="*">

                    <DataGrid
                        Grid.Row="0"
                        IsEnabled="False"
                        ItemsSource="{Binding Items, ElementName=UcDataGridView}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Binding="{Binding FirstName}"
                                Header="First-Name"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Binding="{Binding LastName}"
                                Header="Last-Name"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Binding="{Binding Age}"
                                Header="Age"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Binding="{Binding MyAddress}"
                                Header="Address"
                                IsReadOnly="True" />
                        </DataGrid.Columns>
                    </DataGrid>

                </atc:GridEx>

            </atc:GridEx>

        </GroupBox>
    </atc:AutoGrid>

</UserControl>
