<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpfTheming.Window.NiceWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <atc:AutoGrid Columns="*" Rows="Auto,*">

        <GroupBox
            Margin="0,0,0,10"
            Padding="10"
            Header="Features">
            <TextBlock TextWrapping="Wrap">
                NiceWindow is an extended Window class that provides custom chrome, title bar customization,
                overlay support, and theme integration. Click each button to open a NiceWindow with a different WindowStyle.
            </TextBlock>
        </GroupBox>

        <GroupBox Header="WindowStyle Examples">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <atc:UniformSpacingPanel
                    Margin="10"
                    Orientation="Vertical"
                    Spacing="20">

                    <!--  SingleBorderWindow (Default)  -->
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontWeight="Bold"
                            Text="SingleBorderWindow (Default)" />
                        <TextBlock
                            Margin="0,0,0,10"
                            Foreground="Gray"
                            Text="Standard window with a single border. This is the default WindowStyle."
                            TextWrapping="Wrap" />
                        <Button
                            Width="200"
                            HorizontalAlignment="Left"
                            Click="OnOpenSingleBorderWindowClick"
                            Content="Open SingleBorderWindow" />
                    </StackPanel>

                    <!--  ThreeDBorderWindow  -->
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontWeight="Bold"
                            Text="ThreeDBorderWindow" />
                        <TextBlock
                            Margin="0,0,0,10"
                            Foreground="Gray"
                            Text="Window with a 3D border appearance."
                            TextWrapping="Wrap" />
                        <Button
                            Width="200"
                            HorizontalAlignment="Left"
                            Click="OnOpenThreeDBorderWindowClick"
                            Content="Open ThreeDBorderWindow" />
                    </StackPanel>

                    <!--  ToolWindow  -->
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontWeight="Bold"
                            Text="ToolWindow" />
                        <TextBlock
                            Margin="0,0,0,10"
                            Foreground="Gray"
                            Text="Fixed tool window style with a smaller title bar. Only shows a close button, no minimize/maximize."
                            TextWrapping="Wrap" />
                        <Button
                            Width="200"
                            HorizontalAlignment="Left"
                            Click="OnOpenToolWindowClick"
                            Content="Open ToolWindow" />
                    </StackPanel>

                    <!--  None  -->
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontWeight="Bold"
                            Text="None" />
                        <TextBlock
                            Margin="0,0,0,10"
                            Foreground="Gray"
                            Text="No window border or title bar. Useful for custom chrome or splash screens."
                            TextWrapping="Wrap" />
                        <Button
                            Width="200"
                            HorizontalAlignment="Left"
                            Click="OnOpenNoneWindowClick"
                            Content="Open None (Borderless)" />
                    </StackPanel>

                </atc:UniformSpacingPanel>
            </ScrollViewer>
        </GroupBox>

    </atc:AutoGrid>

</UserControl>