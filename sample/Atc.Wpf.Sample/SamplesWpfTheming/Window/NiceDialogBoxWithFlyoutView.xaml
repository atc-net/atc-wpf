<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpfTheming.Window.NiceDialogBoxWithFlyoutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="500"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <atc:AutoGrid Columns="*" Rows="Auto,*">

        <GroupBox
            Margin="0,0,0,10"
            Padding="10"
            Header="Features">
            <TextBlock TextWrapping="Wrap">
                This sample demonstrates using Flyout controls within a NiceDialogBox.
                Flyouts can provide additional context, settings, or details without leaving the dialog.
                Useful for wizards, settings dialogs, or multi-step processes.
            </TextBlock>
        </GroupBox>

        <GroupBox Header="NiceDialogBox with Flyout Examples">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <atc:UniformSpacingPanel
                    Margin="10"
                    Orientation="Vertical"
                    Spacing="20">

                    <!-- Dialog with Side Panel -->
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontWeight="Bold"
                            Text="Dialog with Side Panel" />
                        <TextBlock
                            Margin="0,0,0,10"
                            Foreground="Gray"
                            Text="Opens a dialog with a flyout side panel for additional options or help content."
                            TextWrapping="Wrap" />
                        <Button
                            Width="250"
                            HorizontalAlignment="Left"
                            Click="OnOpenDialogWithSidePanelClick"
                            Content="Open Dialog with Side Panel" />
                    </StackPanel>

                    <!-- Settings Dialog with Details Flyout -->
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontWeight="Bold"
                            Text="Settings Dialog with Details" />
                        <TextBlock
                            Margin="0,0,0,10"
                            Foreground="Gray"
                            Text="Opens a settings dialog where clicking items reveals detailed configuration in a flyout."
                            TextWrapping="Wrap" />
                        <Button
                            Width="250"
                            HorizontalAlignment="Left"
                            Click="OnOpenSettingsDialogClick"
                            Content="Open Settings with Details Flyout" />
                    </StackPanel>

                    <!-- Wizard-Style Dialog -->
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontWeight="Bold"
                            Text="Wizard-Style Dialog" />
                        <TextBlock
                            Margin="0,0,0,10"
                            Foreground="Gray"
                            Text="Opens a dialog that uses flyouts to reveal wizard steps, allowing back/forward navigation."
                            TextWrapping="Wrap" />
                        <Button
                            Width="250"
                            HorizontalAlignment="Left"
                            Click="OnOpenWizardDialogClick"
                            Content="Open Wizard Dialog" />
                    </StackPanel>

                    <!-- Dialog with Center Flyout -->
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontWeight="Bold"
                            Text="Dialog with Center Flyout" />
                        <TextBlock
                            Margin="0,0,0,10"
                            Foreground="Gray"
                            Text="Opens a dialog that uses a center flyout for confirmation or important messages."
                            TextWrapping="Wrap" />
                        <Button
                            Width="250"
                            HorizontalAlignment="Left"
                            Click="OnOpenDialogWithCenterFlyoutClick"
                            Content="Open with Center Flyout" />
                    </StackPanel>

                </atc:UniformSpacingPanel>
            </ScrollViewer>
        </GroupBox>

    </atc:AutoGrid>

</UserControl>
