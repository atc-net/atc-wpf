<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpfTheming.Window.NiceWindowWithFlyoutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="500"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <atc:AutoGrid Columns="*" Rows="Auto,*">

        <GroupBox
            Margin="0,0,0,10"
            Padding="10"
            Header="Features">
            <TextBlock TextWrapping="Wrap">
                This sample demonstrates using Flyout controls within a NiceWindow.
                Flyouts integrate seamlessly with NiceWindow's overlay system and theming.
                The FlyoutHost can manage multiple flyouts with nested drill-down experiences.
            </TextBlock>
        </GroupBox>

        <GroupBox Header="NiceWindow with Flyout Examples">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <atc:UniformSpacingPanel
                    Margin="10"
                    Orientation="Vertical"
                    Spacing="20">

                    <!-- Basic Flyout in NiceWindow -->
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontWeight="Bold"
                            Text="Basic Flyout in NiceWindow" />
                        <TextBlock
                            Margin="0,0,0,10"
                            Foreground="Gray"
                            Text="Opens a NiceWindow with a simple flyout panel. The flyout slides in from the right and respects the window's theme."
                            TextWrapping="Wrap" />
                        <Button
                            Width="250"
                            HorizontalAlignment="Left"
                            Click="OnOpenBasicFlyoutWindowClick"
                            Content="Open NiceWindow with Flyout" />
                    </StackPanel>

                    <!-- FlyoutHost with Multiple Flyouts -->
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontWeight="Bold"
                            Text="FlyoutHost (Azure Portal Style)" />
                        <TextBlock
                            Margin="0,0,0,10"
                            Foreground="Gray"
                            Text="Opens a NiceWindow with FlyoutHost managing nested flyouts. Demonstrates drill-down navigation similar to Azure Portal blades."
                            TextWrapping="Wrap" />
                        <Button
                            Width="250"
                            HorizontalAlignment="Left"
                            Click="OnOpenFlyoutHostWindowClick"
                            Content="Open NiceWindow with FlyoutHost" />
                    </StackPanel>

                    <!-- Flyout with Settings Form -->
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontWeight="Bold"
                            Text="Settings Flyout in NiceWindow" />
                        <TextBlock
                            Margin="0,0,0,10"
                            Foreground="Gray"
                            Text="Opens a NiceWindow with a settings flyout containing form fields. Demonstrates a common use case for application settings panels."
                            TextWrapping="Wrap" />
                        <Button
                            Width="250"
                            HorizontalAlignment="Left"
                            Click="OnOpenSettingsFlyoutWindowClick"
                            Content="Open NiceWindow with Settings" />
                    </StackPanel>

                    <!-- All Flyout Positions -->
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontWeight="Bold"
                            Text="All Flyout Positions" />
                        <TextBlock
                            Margin="0,0,0,10"
                            Foreground="Gray"
                            Text="Opens a NiceWindow with buttons to demonstrate all flyout positions (Right, Left, Top, Bottom, Center)."
                            TextWrapping="Wrap" />
                        <Button
                            Width="250"
                            HorizontalAlignment="Left"
                            Click="OnOpenAllPositionsFlyoutWindowClick"
                            Content="Open NiceWindow with All Positions" />
                    </StackPanel>

                    <!-- Advanced Features -->
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontWeight="Bold"
                            Text="Advanced Flyout Features" />
                        <TextBlock
                            Margin="0,0,0,10"
                            Foreground="Gray"
                            Text="Opens a NiceWindow demonstrating advanced flyout features: pin/unpin, resizable panels, and custom animations."
                            TextWrapping="Wrap" />
                        <Button
                            Width="250"
                            HorizontalAlignment="Left"
                            Click="OnOpenAdvancedFlyoutWindowClick"
                            Content="Open NiceWindow with Advanced" />
                    </StackPanel>

                </atc:UniformSpacingPanel>
            </ScrollViewer>
        </GroupBox>

    </atc:AutoGrid>

</UserControl>
