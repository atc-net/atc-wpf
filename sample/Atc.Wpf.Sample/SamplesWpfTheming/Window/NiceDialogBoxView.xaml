<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpfTheming.Window.NiceDialogBoxView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="500"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <atc:AutoGrid Columns="*" Rows="Auto,*">

        <GroupBox
            Margin="0,0,0,10"
            Padding="10"
            Header="Features">
            <TextBlock TextWrapping="Wrap">
                NiceDialogBox is a specialized NiceWindow designed for dialog scenarios.
                It hides minimize/maximize buttons, doesn't appear in taskbar, and centers on screen by default.
                Use ShowDialog() for modal dialogs or Show() for non-modal.
            </TextBlock>
        </GroupBox>

        <GroupBox Header="NiceDialogBox Examples">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <atc:UniformSpacingPanel
                    Margin="10"
                    Orientation="Vertical"
                    Spacing="20">

                    <!-- Basic Dialog -->
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontWeight="Bold"
                            Text="Basic Dialog" />
                        <TextBlock
                            Margin="0,0,0,10"
                            Foreground="Gray"
                            Text="Opens a simple NiceDialogBox with default settings. No title bar buttons except close (if enabled)."
                            TextWrapping="Wrap" />
                        <Button
                            Width="200"
                            HorizontalAlignment="Left"
                            Click="OnOpenBasicDialogClick"
                            Content="Open Basic Dialog" />
                    </StackPanel>

                    <!-- Dialog with Close Button -->
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontWeight="Bold"
                            Text="Dialog with Close Button" />
                        <TextBlock
                            Margin="0,0,0,10"
                            Foreground="Gray"
                            Text="Opens a NiceDialogBox with the close button visible. User can close via title bar or programmatically."
                            TextWrapping="Wrap" />
                        <Button
                            Width="200"
                            HorizontalAlignment="Left"
                            Click="OnOpenDialogWithCloseButtonClick"
                            Content="Open with Close Button" />
                    </StackPanel>

                    <!-- Modal Dialog -->
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontWeight="Bold"
                            Text="Modal Dialog" />
                        <TextBlock
                            Margin="0,0,0,10"
                            Foreground="Gray"
                            Text="Opens a modal NiceDialogBox using ShowDialog(). Blocks interaction with parent until closed."
                            TextWrapping="Wrap" />
                        <Button
                            Width="200"
                            HorizontalAlignment="Left"
                            Click="OnOpenModalDialogClick"
                            Content="Open Modal Dialog" />
                    </StackPanel>

                    <!-- Confirmation Dialog -->
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontWeight="Bold"
                            Text="Confirmation Dialog" />
                        <TextBlock
                            Margin="0,0,0,10"
                            Foreground="Gray"
                            Text="Opens a dialog with Yes/No buttons that returns a DialogResult."
                            TextWrapping="Wrap" />
                        <Button
                            Width="200"
                            HorizontalAlignment="Left"
                            Click="OnOpenConfirmationDialogClick"
                            Content="Open Confirmation Dialog" />
                    </StackPanel>

                    <!-- Custom Sized Dialog -->
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontWeight="Bold"
                            Text="Custom Sized Dialog" />
                        <TextBlock
                            Margin="0,0,0,10"
                            Foreground="Gray"
                            Text="Opens a larger NiceDialogBox with custom dimensions for more content."
                            TextWrapping="Wrap" />
                        <Button
                            Width="200"
                            HorizontalAlignment="Left"
                            Click="OnOpenCustomSizedDialogClick"
                            Content="Open Custom Sized Dialog" />
                    </StackPanel>

                </atc:UniformSpacingPanel>
            </ScrollViewer>
        </GroupBox>

    </atc:AutoGrid>

</UserControl>
