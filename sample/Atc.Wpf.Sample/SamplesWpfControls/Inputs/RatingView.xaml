<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpfControls.Inputs.RatingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fontIcons="clr-namespace:Atc.Wpf.FontIcons;assembly=Atc.Wpf.FontIcons"
    xmlns:inputs="clr-namespace:Atc.Wpf.Controls.Inputs;assembly=Atc.Wpf.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="900"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <atc:AutoGrid Columns="*" Rows="Auto,Auto,Auto,Auto,Auto,Auto,Auto">

            <GroupBox
                Margin="0,0,0,10"
                Padding="10"
                Header="Features">
                <TextBlock TextWrapping="Wrap">
                    The RatingControl provides an intuitive star-based rating input.
                    It supports configurable number of stars, half-star precision, custom icons, read-only mode, hover preview, and full keyboard accessibility.
                </TextBlock>
            </GroupBox>

            <GroupBox
                Margin="0,0,0,10"
                Padding="10"
                Header="Basic Usage">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="Bold"
                        Text="Default Rating (5 stars)" />
                    <inputs:Rating
                        x:Name="basicRating"
                        Value="3" />
                    <TextBlock Margin="0,5,0,0">
                        <Run Text="Rating: " />
                        <Run Text="{Binding Value, ElementName=basicRating, StringFormat=N1}" />
                        <Run Text=" / 5" />
                    </TextBlock>

                    <TextBlock
                        Margin="0,20,0,5"
                        FontWeight="Bold"
                        Text="10-Star Rating" />
                    <inputs:Rating
                        x:Name="tenStarRating"
                        Maximum="10"
                        Value="7" />
                    <TextBlock Margin="0,5,0,0">
                        <Run Text="Rating: " />
                        <Run Text="{Binding Value, ElementName=tenStarRating, StringFormat=N1}" />
                        <Run Text=" / 10" />
                    </TextBlock>

                    <TextBlock
                        Margin="0,20,0,5"
                        FontWeight="Bold"
                        Text="3-Star Rating" />
                    <inputs:Rating
                        x:Name="threeStarRating"
                        Maximum="3"
                        Value="2" />
                    <TextBlock Margin="0,5,0,0">
                        <Run Text="Rating: " />
                        <Run Text="{Binding Value, ElementName=threeStarRating, StringFormat=N1}" />
                        <Run Text=" / 3" />
                    </TextBlock>
                </StackPanel>
            </GroupBox>

            <GroupBox
                Margin="0,0,0,10"
                Padding="10"
                Header="Half-Star Precision">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="Bold"
                        Text="Half-Star Enabled" />
                    <inputs:Rating
                        x:Name="halfStarRating"
                        AllowHalfStars="True"
                        Value="3.5" />
                    <TextBlock Margin="0,5,0,0">
                        <Run Text="Rating: " />
                        <Run Text="{Binding Value, ElementName=halfStarRating, StringFormat=N1}" />
                        <Run Text=" / 5" />
                    </TextBlock>

                    <TextBlock
                        Margin="0,20,0,5"
                        FontWeight="Bold"
                        Text="10-Star with Half Precision" />
                    <inputs:Rating
                        x:Name="halfTenRating"
                        AllowHalfStars="True"
                        Maximum="10"
                        Value="7.5" />
                    <TextBlock Margin="0,5,0,0">
                        <Run Text="Rating: " />
                        <Run Text="{Binding Value, ElementName=halfTenRating, StringFormat=N1}" />
                        <Run Text=" / 10" />
                    </TextBlock>
                </StackPanel>
            </GroupBox>

            <GroupBox
                Margin="0,0,0,10"
                Padding="10"
                Header="Custom Styling">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="Bold"
                        Text="Large Stars" />
                    <inputs:Rating
                        ItemSize="48"
                        ItemSpacing="8"
                        Value="4" />

                    <TextBlock
                        Margin="0,20,0,5"
                        FontWeight="Bold"
                        Text="Small Stars" />
                    <inputs:Rating
                        ItemSize="16"
                        ItemSpacing="2"
                        Value="3" />

                    <TextBlock
                        Margin="0,20,0,5"
                        FontWeight="Bold"
                        Text="Custom Colors" />
                    <inputs:Rating
                        EmptyBrush="LightGray"
                        FilledBrush="Red"
                        PreviewBrush="OrangeRed"
                        Value="3" />

                    <TextBlock
                        Margin="0,20,0,5"
                        FontWeight="Bold"
                        Text="Green Rating" />
                    <inputs:Rating
                        EmptyBrush="#C8E6C9"
                        FilledBrush="#4CAF50"
                        PreviewBrush="#81C784"
                        Value="4" />

                    <TextBlock
                        Margin="0,20,0,5"
                        FontWeight="Bold"
                        Text="Custom Icons (Hearts)" />
                    <inputs:Rating
                        EmptyIcon="&#x2661;"
                        FilledBrush="HotPink"
                        FilledIcon="&#x2665;"
                        HalfFilledIcon="&#x2665;"
                        Value="3" />

                    <TextBlock
                        Margin="0,20,0,5"
                        FontWeight="Bold"
                        Text="Thumbs Up Icons" />
                    <inputs:Rating
                        EmptyBrush="DarkGray"
                        EmptyIcon="&#x1F44D;"
                        FilledBrush="DodgerBlue"
                        FilledIcon="&#x1F44D;"
                        HalfFilledIcon="&#x1F44D;"
                        ItemSize="32"
                        Value="4" />
                </StackPanel>
            </GroupBox>

            <GroupBox
                Margin="0,0,0,10"
                Padding="10"
                Header="FontIcon Stars">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="Bold"
                        Text="Font Awesome Stars" />
                    <inputs:Rating
                        EmptyBrush="LightGray"
                        EmptyIcon="{x:Static fontIcons:FontAwesomeRegularType.Star}"
                        FilledBrush="Gold"
                        FilledIcon="{x:Static fontIcons:FontAwesomeSolidType.Star}"
                        ItemSize="32"
                        Value="4" />

                    <TextBlock
                        Margin="0,20,0,5"
                        FontWeight="Bold"
                        Text="Material Design Stars (with Half Stars)" />
                    <inputs:Rating
                        AllowHalfStars="True"
                        EmptyBrush="#E0E0E0"
                        EmptyIcon="{x:Static fontIcons:FontMaterialDesignType.StarOutline}"
                        FilledBrush="#FFC107"
                        FilledIcon="{x:Static fontIcons:FontMaterialDesignType.Star}"
                        HalfFilledIcon="{x:Static fontIcons:FontMaterialDesignType.StarHalf}"
                        ItemSize="32"
                        PreviewBrush="#FFD54F"
                        Value="3.5" />

                    <TextBlock
                        Margin="0,20,0,5"
                        FontWeight="Bold"
                        Text="Heart Rating (Font Awesome)" />
                    <inputs:Rating
                        EmptyBrush="Pink"
                        EmptyIcon="{x:Static fontIcons:FontAwesomeRegularType.Heart}"
                        FilledBrush="Red"
                        FilledIcon="{x:Static fontIcons:FontAwesomeSolidType.Heart}"
                        HalfFilledIcon="{x:Static fontIcons:FontAwesomeSolidType.Heart}"
                        ItemSize="28"
                        PreviewBrush="Crimson"
                        Value="3" />

                    <TextBlock
                        Margin="0,20,0,5"
                        FontWeight="Bold"
                        Text="Bootstrap Icons" />
                    <inputs:Rating
                        EmptyBrush="Silver"
                        EmptyIcon="{x:Static fontIcons:FontBootstrapType.StarEmpty}"
                        FilledBrush="DarkOrange"
                        FilledIcon="{x:Static fontIcons:FontBootstrapType.Star}"
                        HalfFilledIcon="{x:Static fontIcons:FontBootstrapType.Star}"
                        ItemSize="28"
                        Value="4" />

                    <TextBlock
                        Margin="0,20,0,5"
                        FontWeight="Bold"
                        Text="Thumbs Up (Font Awesome)" />
                    <inputs:Rating
                        EmptyBrush="LightGray"
                        EmptyIcon="{x:Static fontIcons:FontAwesomeRegularType.ThumbsUp}"
                        FilledBrush="DodgerBlue"
                        FilledIcon="{x:Static fontIcons:FontAwesomeSolidType.ThumbsUp}"
                        HalfFilledIcon="{x:Static fontIcons:FontAwesomeSolidType.ThumbsUp}"
                        ItemSize="28"
                        Value="3" />
                </StackPanel>
            </GroupBox>

            <GroupBox
                Margin="0,0,0,10"
                Padding="10"
                Header="Read-Only Mode">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="Bold"
                        Text="Read-Only Display" />
                    <inputs:Rating
                        IsReadOnly="True"
                        Value="4" />
                    <TextBlock Margin="0,5,0,0" Text="This rating cannot be changed by the user." />

                    <TextBlock
                        Margin="0,20,0,5"
                        FontWeight="Bold"
                        Text="Read-Only with Half Stars" />
                    <inputs:Rating
                        AllowHalfStars="True"
                        IsReadOnly="True"
                        Value="3.5" />

                    <TextBlock
                        Margin="0,20,0,5"
                        FontWeight="Bold"
                        Text="Disabled Rating" />
                    <inputs:Rating
                        IsEnabled="False"
                        Value="2" />
                </StackPanel>
            </GroupBox>

            <GroupBox Padding="10" Header="Keyboard Navigation">
                <StackPanel>
                    <TextBlock Margin="0,0,0,10" TextWrapping="Wrap">
                        Click on the rating control to focus it, then use the keyboard to adjust the value:
                    </TextBlock>
                    <TextBlock Margin="0,0,0,5" Text="- Left/Down Arrow: Decrease rating" />
                    <TextBlock Margin="0,0,0,5" Text="- Right/Up Arrow: Increase rating" />
                    <TextBlock Margin="0,0,0,5" Text="- Home: Set to minimum (0)" />
                    <TextBlock Margin="0,0,0,15" Text="- End: Set to maximum" />

                    <inputs:Rating
                        x:Name="keyboardRating"
                        AllowHalfStars="True"
                        BorderBrush="Transparent"
                        BorderThickness="2"
                        Value="2.5" />
                    <TextBlock Margin="0,5,0,0">
                        <Run Text="Rating: " />
                        <Run Text="{Binding Value, ElementName=keyboardRating, StringFormat=N1}" />
                    </TextBlock>
                </StackPanel>
            </GroupBox>

        </atc:AutoGrid>
    </ScrollViewer>

</UserControl>
