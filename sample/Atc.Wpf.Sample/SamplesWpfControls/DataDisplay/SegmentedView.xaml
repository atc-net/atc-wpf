<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpfControls.DataDisplay.SegmentedView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dataDisplay="clr-namespace:Atc.Wpf.Controls.DataDisplay;assembly=Atc.Wpf.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="900"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <atc:AutoGrid Columns="*" Rows="Auto,Auto,Auto,Auto,Auto">

            <GroupBox
                Margin="0,0,0,10"
                Padding="10"
                Header="Features">
                <TextBlock Width="700" TextWrapping="Wrap">
                    The Segmented control provides a horizontal set of mutually exclusive options,
                    similar to iOS UISegmentedControl. It supports keyboard navigation (arrow keys,
                    Home/End), optional icons, equal or proportional segment sizing, and customizable
                    selection and hover colors.
                </TextBlock>
            </GroupBox>

            <!--  Section 1: Basic Segmented  -->
            <GroupBox
                Margin="0,0,0,10"
                Padding="10"
                Header="Basic Segmented">
                <dataDisplay:Segmented SelectedIndex="1">
                    <dataDisplay:SegmentedItem Content="Day" />
                    <dataDisplay:SegmentedItem Content="Week" />
                    <dataDisplay:SegmentedItem Content="Month" />
                </dataDisplay:Segmented>
            </GroupBox>

            <!--  Section 2: With Icons  -->
            <GroupBox
                Margin="0,0,0,10"
                Padding="10"
                Header="With Icons">
                <dataDisplay:Segmented SelectedIndex="0">
                    <dataDisplay:SegmentedItem Content="List">
                        <dataDisplay:SegmentedItem.Icon>
                            <TextBlock FontSize="14" Text="&#x2630;" />
                        </dataDisplay:SegmentedItem.Icon>
                    </dataDisplay:SegmentedItem>
                    <dataDisplay:SegmentedItem Content="Grid">
                        <dataDisplay:SegmentedItem.Icon>
                            <TextBlock FontSize="14" Text="&#x25A6;" />
                        </dataDisplay:SegmentedItem.Icon>
                    </dataDisplay:SegmentedItem>
                    <dataDisplay:SegmentedItem Content="Map">
                        <dataDisplay:SegmentedItem.Icon>
                            <TextBlock FontSize="14" Text="&#x2691;" />
                        </dataDisplay:SegmentedItem.Icon>
                    </dataDisplay:SegmentedItem>
                </dataDisplay:Segmented>
            </GroupBox>

            <!--  Section 3: Interactive with Event  -->
            <GroupBox
                Margin="0,0,0,10"
                Padding="10"
                Header="Interactive with Event">
                <StackPanel>
                    <dataDisplay:Segmented
                        x:Name="InteractiveSegmented"
                        SelectedIndex="0"
                        SelectionChanged="OnSelectionChanged">
                        <dataDisplay:SegmentedItem Content="All" />
                        <dataDisplay:SegmentedItem Content="Active" />
                        <dataDisplay:SegmentedItem Content="Completed" />
                        <dataDisplay:SegmentedItem Content="Archived" />
                    </dataDisplay:Segmented>
                    <TextBlock
                        x:Name="SelectionStatus"
                        Margin="0,10,0,0"
                        FontStyle="Italic"
                        Foreground="Gray"
                        Text="Click a segment to see the selection change event." />
                </StackPanel>
            </GroupBox>

            <!--  Section 4: Sizing and Styling  -->
            <GroupBox
                Padding="10"
                Header="Sizing &amp; Styling">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontWeight="Bold"
                        Text="Proportional width (EqualSegmentWidth=False)" />
                    <dataDisplay:Segmented
                        EqualSegmentWidth="False"
                        SelectedIndex="1">
                        <dataDisplay:SegmentedItem Content="S" />
                        <dataDisplay:SegmentedItem Content="Medium" />
                        <dataDisplay:SegmentedItem Content="Extra Large" />
                    </dataDisplay:Segmented>

                    <TextBlock
                        Margin="0,15,0,10"
                        FontWeight="Bold"
                        Text="Custom colors and disabled segment" />
                    <dataDisplay:Segmented
                        CornerRadius="12"
                        SelectedBackground="#4CAF50"
                        SelectedForeground="White"
                        SelectedIndex="0">
                        <dataDisplay:SegmentedItem Content="Low" />
                        <dataDisplay:SegmentedItem Content="Medium" />
                        <dataDisplay:SegmentedItem Content="High" />
                        <dataDisplay:SegmentedItem Content="Critical" IsEnabled="False" />
                    </dataDisplay:Segmented>
                </StackPanel>
            </GroupBox>

        </atc:AutoGrid>
    </ScrollViewer>

</UserControl>
