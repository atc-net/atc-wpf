<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpfControls.DataDisplay.PopoverView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dataDisplay="clr-namespace:Atc.Wpf.Controls.DataDisplay;assembly=Atc.Wpf.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="900"
    d:DesignWidth="900"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <atc:AutoGrid Columns="*" Rows="Auto,Auto,Auto,Auto,Auto,Auto">

            <GroupBox
                Margin="0,0,0,10"
                Padding="10"
                Header="Features">
                <TextBlock TextWrapping="Wrap">
                    The Popover control displays popup content positioned relative to an anchor element.
                    It supports 12 placement options, optional arrow pointer, multiple trigger modes (click, hover, manual),
                    open/close delays, max size constraints, and automatic flip behavior when constrained.
                </TextBlock>
            </GroupBox>

            <GroupBox
                Margin="0,0,0,10"
                Padding="10"
                Header="Basic Click Popover">
                <atc:UniformSpacingPanel
                    HorizontalSpacing="30"
                    Orientation="Horizontal"
                    VerticalSpacing="20">
                    <dataDisplay:Popover>
                        <dataDisplay:Popover.Anchor>
                            <Button
                                Width="120"
                                Height="32"
                                Content="Click Me" />
                        </dataDisplay:Popover.Anchor>
                        <dataDisplay:Popover.PopoverContent>
                            <StackPanel Width="200">
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Text="Popover Title" />
                                <TextBlock
                                    Margin="0,4,0,0"
                                    Foreground="{DynamicResource AtcApps.Brushes.Gray2}"
                                    Text="This is a basic click-triggered popover. Click outside to dismiss."
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </dataDisplay:Popover.PopoverContent>
                    </dataDisplay:Popover>

                    <dataDisplay:Popover ShowArrow="False">
                        <dataDisplay:Popover.Anchor>
                            <Button
                                Width="120"
                                Height="32"
                                Content="No Arrow" />
                        </dataDisplay:Popover.Anchor>
                        <dataDisplay:Popover.PopoverContent>
                            <TextBlock
                                Width="180"
                                Text="This popover has no arrow pointer."
                                TextWrapping="Wrap" />
                        </dataDisplay:Popover.PopoverContent>
                    </dataDisplay:Popover>
                </atc:UniformSpacingPanel>
            </GroupBox>

            <GroupBox
                Margin="0,0,0,10"
                Padding="10"
                Header="Hover Trigger">
                <atc:UniformSpacingPanel
                    HorizontalSpacing="30"
                    Orientation="Horizontal"
                    VerticalSpacing="20">
                    <dataDisplay:Popover
                        CloseDelay="300"
                        OpenDelay="200"
                        TriggerMode="Hover">
                        <dataDisplay:Popover.Anchor>
                            <Border
                                Padding="12,6"
                                Background="{DynamicResource AtcApps.Brushes.Gray8}"
                                CornerRadius="4">
                                <TextBlock Text="Hover over me" />
                            </Border>
                        </dataDisplay:Popover.Anchor>
                        <dataDisplay:Popover.PopoverContent>
                            <TextBlock
                                Width="200"
                                Text="This popover opens on hover with a 200ms delay and closes 300ms after the mouse leaves."
                                TextWrapping="Wrap" />
                        </dataDisplay:Popover.PopoverContent>
                    </dataDisplay:Popover>

                    <dataDisplay:Popover
                        OpenDelay="0"
                        Placement="Right"
                        TriggerMode="Hover">
                        <dataDisplay:Popover.Anchor>
                            <Border
                                Padding="12,6"
                                Background="{DynamicResource AtcApps.Brushes.Gray8}"
                                CornerRadius="4">
                                <TextBlock Text="Instant hover (Right)" />
                            </Border>
                        </dataDisplay:Popover.Anchor>
                        <dataDisplay:Popover.PopoverContent>
                            <TextBlock
                                Width="160"
                                Text="No open delay, placed to the right."
                                TextWrapping="Wrap" />
                        </dataDisplay:Popover.PopoverContent>
                    </dataDisplay:Popover>
                </atc:UniformSpacingPanel>
            </GroupBox>

            <GroupBox
                Margin="0,0,0,10"
                Padding="10"
                Header="Placement Options">
                <atc:UniformSpacingPanel
                    HorizontalSpacing="20"
                    Orientation="Horizontal"
                    VerticalSpacing="20">
                    <dataDisplay:Popover Placement="Top">
                        <dataDisplay:Popover.Anchor>
                            <Button
                                Width="80"
                                Height="32"
                                Content="Top" />
                        </dataDisplay:Popover.Anchor>
                        <dataDisplay:Popover.PopoverContent>
                            <TextBlock Text="Placed on top" />
                        </dataDisplay:Popover.PopoverContent>
                    </dataDisplay:Popover>

                    <dataDisplay:Popover Placement="Bottom">
                        <dataDisplay:Popover.Anchor>
                            <Button
                                Width="80"
                                Height="32"
                                Content="Bottom" />
                        </dataDisplay:Popover.Anchor>
                        <dataDisplay:Popover.PopoverContent>
                            <TextBlock Text="Placed on bottom" />
                        </dataDisplay:Popover.PopoverContent>
                    </dataDisplay:Popover>

                    <dataDisplay:Popover Placement="Left">
                        <dataDisplay:Popover.Anchor>
                            <Button
                                Width="80"
                                Height="32"
                                Content="Left" />
                        </dataDisplay:Popover.Anchor>
                        <dataDisplay:Popover.PopoverContent>
                            <TextBlock Text="Placed on left" />
                        </dataDisplay:Popover.PopoverContent>
                    </dataDisplay:Popover>

                    <dataDisplay:Popover Placement="Right">
                        <dataDisplay:Popover.Anchor>
                            <Button
                                Width="80"
                                Height="32"
                                Content="Right" />
                        </dataDisplay:Popover.Anchor>
                        <dataDisplay:Popover.PopoverContent>
                            <TextBlock Text="Placed on right" />
                        </dataDisplay:Popover.PopoverContent>
                    </dataDisplay:Popover>

                    <dataDisplay:Popover Placement="TopStart">
                        <dataDisplay:Popover.Anchor>
                            <Button
                                Width="90"
                                Height="32"
                                Content="TopStart" />
                        </dataDisplay:Popover.Anchor>
                        <dataDisplay:Popover.PopoverContent>
                            <TextBlock Text="Placed at TopStart" />
                        </dataDisplay:Popover.PopoverContent>
                    </dataDisplay:Popover>

                    <dataDisplay:Popover Placement="BottomEnd">
                        <dataDisplay:Popover.Anchor>
                            <Button
                                Width="100"
                                Height="32"
                                Content="BottomEnd" />
                        </dataDisplay:Popover.Anchor>
                        <dataDisplay:Popover.PopoverContent>
                            <TextBlock Text="Placed at BottomEnd" />
                        </dataDisplay:Popover.PopoverContent>
                    </dataDisplay:Popover>
                </atc:UniformSpacingPanel>
            </GroupBox>

            <GroupBox
                Margin="0,0,0,10"
                Padding="10"
                Header="Rich Content">
                <atc:UniformSpacingPanel
                    HorizontalSpacing="30"
                    Orientation="Horizontal"
                    VerticalSpacing="20">
                    <dataDisplay:Popover>
                        <dataDisplay:Popover.Anchor>
                            <Button
                                Width="140"
                                Height="32"
                                Content="Rich Content" />
                        </dataDisplay:Popover.Anchor>
                        <dataDisplay:Popover.PopoverContent>
                            <StackPanel Width="250">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Text="User Settings" />
                                <Separator Margin="0,8" />
                                <TextBlock Text="Display name:" />
                                <TextBox
                                    Margin="0,4,0,8"
                                    Text="John Doe" />
                                <TextBlock Text="Theme:" />
                                <ComboBox
                                    Margin="0,4,0,8"
                                    SelectedIndex="0">
                                    <ComboBoxItem Content="Light" />
                                    <ComboBoxItem Content="Dark" />
                                </ComboBox>
                                <Button
                                    HorizontalAlignment="Right"
                                    Content="Apply"
                                    Padding="16,4" />
                            </StackPanel>
                        </dataDisplay:Popover.PopoverContent>
                    </dataDisplay:Popover>
                </atc:UniformSpacingPanel>
            </GroupBox>

            <GroupBox
                Padding="10"
                Header="Max Size Constraint">
                <dataDisplay:Popover
                    MaxPopoverHeight="120"
                    MaxPopoverWidth="200">
                    <dataDisplay:Popover.Anchor>
                        <Button
                            Width="160"
                            Height="32"
                            Content="Constrained Size" />
                    </dataDisplay:Popover.Anchor>
                    <dataDisplay:Popover.PopoverContent>
                        <TextBlock
                            Text="This popover has a maximum width of 200 pixels and a maximum height of 120 pixels. When content exceeds these limits, the border constrains it and scrollbars may appear if the content is scrollable."
                            TextWrapping="Wrap" />
                    </dataDisplay:Popover.PopoverContent>
                </dataDisplay:Popover>
            </GroupBox>

        </atc:AutoGrid>
    </ScrollViewer>

</UserControl>
