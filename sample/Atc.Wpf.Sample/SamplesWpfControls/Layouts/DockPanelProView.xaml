<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpfControls.Layouts.DockPanelProView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:layouts="clr-namespace:Atc.Wpf.Controls.Layouts;assembly=Atc.Wpf.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Toolbar  -->
        <StackPanel
            Grid.Row="0"
            Margin="8"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="SaveLayoutButton"
                Width="100"
                Margin="0,0,8,0"
                Click="SaveLayoutButton_Click"
                Content="Save Layout" />
            <Button
                x:Name="LoadLayoutButton"
                Width="100"
                Margin="0,0,8,0"
                Click="LoadLayoutButton_Click"
                Content="Load Layout" />
            <Button
                x:Name="ResetLayoutButton"
                Width="100"
                Click="ResetLayoutButton_Click"
                Content="Reset Layout" />
        </StackPanel>

        <!--  DockPanelPro Demo  -->
        <layouts:DockPanelPro
            x:Name="MainDockPanel"
            Grid.Row="1"
            Margin="8"
            LayoutId="DemoLayout"
            SplitterThickness="5">

            <!--  Left Panel  -->
            <layouts:DockRegion
                layouts:DockPanelPro.Dock="Left"
                Width="200"
                MinWidth="100"
                MaxWidth="350"
                Header="Left Panel"
                IsCollapsible="True"
                RegionId="Left">
                <TextBlock
                    Margin="8"
                    Text="Drag the splitter to resize"
                    TextWrapping="Wrap" />
            </layouts:DockRegion>

            <!--  Right Panel  -->
            <layouts:DockRegion
                layouts:DockPanelPro.Dock="Right"
                Width="200"
                MinWidth="100"
                MaxWidth="350"
                Header="Right Panel"
                IsCollapsible="True"
                RegionId="Right">
                <TextBlock
                    Margin="8"
                    Text="Click the arrow to collapse"
                    TextWrapping="Wrap" />
            </layouts:DockRegion>

            <!--  Bottom Panel  -->
            <layouts:DockRegion
                layouts:DockPanelPro.Dock="Bottom"
                Height="120"
                MinHeight="80"
                MaxHeight="250"
                Header="Bottom Panel"
                IsCollapsible="True"
                RegionId="Bottom">
                <TextBlock
                    Margin="8"
                    Text="Supports Top, Bottom, Left, Right, and Center positions"
                    TextWrapping="Wrap" />
            </layouts:DockRegion>

            <!--  Center Panel (fills remaining space)  -->
            <layouts:DockRegion
                layouts:DockPanelPro.Dock="Center"
                Header="Center Panel"
                RegionId="Center">
                <TextBlock
                    Margin="8"
                    Text="Center region fills the remaining space"
                    TextWrapping="Wrap" />
            </layouts:DockRegion>

        </layouts:DockPanelPro>
    </Grid>

</UserControl>
