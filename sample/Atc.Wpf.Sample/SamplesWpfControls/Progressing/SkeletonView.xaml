<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpfControls.Progressing.SkeletonView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <atc:AutoGrid Columns="*" Rows="Auto,Auto,Auto">

            <!--  Section 1: Shapes & Animations  -->
            <GroupBox
                Margin="0,0,0,10"
                Padding="10"
                Header="Shapes &amp; Animations">
                <atc:AutoGrid Columns="*" Rows="Auto,Auto,Auto">

                    <!--  Controls  -->
                    <atc:UniformSpacingPanel
                        Margin="0,0,0,10"
                        Orientation="Horizontal"
                        Spacing="20">
                        <atc:LabelCheckBox
                            x:Name="CbIsActive"
                            IsChecked="True"
                            LabelText="IsActive" />
                    </atc:UniformSpacingPanel>

                    <!--  Shape variants  -->
                    <atc:UniformSpacingPanel Orientation="Vertical" Spacing="10">
                        <TextBlock FontWeight="SemiBold" Text="Rectangle (default)" />
                        <atc:SkeletonElement
                            Height="16"
                            IsActive="{Binding ElementName=CbIsActive, Path=IsChecked}" />

                        <TextBlock FontWeight="SemiBold" Text="Rounded" />
                        <atc:SkeletonElement
                            Height="16"
                            IsActive="{Binding ElementName=CbIsActive, Path=IsChecked}"
                            Shape="Rounded" />

                        <TextBlock FontWeight="SemiBold" Text="Circle" />
                        <atc:SkeletonElement
                            Height="48"
                            IsActive="{Binding ElementName=CbIsActive, Path=IsChecked}"
                            Shape="Circle" />
                    </atc:UniformSpacingPanel>

                    <!--  Animation variants  -->
                    <atc:UniformSpacingPanel
                        Margin="0,10,0,0"
                        Orientation="Vertical"
                        Spacing="10">
                        <TextBlock FontWeight="SemiBold" Text="Shimmer (default)" />
                        <atc:SkeletonElement
                            Height="16"
                            AnimationType="Shimmer"
                            IsActive="{Binding ElementName=CbIsActive, Path=IsChecked}" />

                        <TextBlock FontWeight="SemiBold" Text="Pulse" />
                        <atc:SkeletonElement
                            Height="16"
                            AnimationType="Pulse"
                            IsActive="{Binding ElementName=CbIsActive, Path=IsChecked}" />

                        <TextBlock FontWeight="SemiBold" Text="None (static)" />
                        <atc:SkeletonElement Height="16" AnimationType="None" />
                    </atc:UniformSpacingPanel>
                </atc:AutoGrid>
            </GroupBox>

            <!--  Section 2: Card Loading Skeleton  -->
            <GroupBox
                Margin="0,0,0,10"
                Padding="10"
                Header="Card Loading Skeleton">
                <Border
                    Padding="16"
                    BorderBrush="{DynamicResource AtcApps.Brushes.Gray8}"
                    BorderThickness="1"
                    CornerRadius="4">
                    <StackPanel Orientation="Horizontal">
                        <!--  Avatar placeholder  -->
                        <atc:SkeletonElement
                            Width="48"
                            Height="48"
                            Margin="0,0,12,0"
                            VerticalAlignment="Top"
                            Shape="Circle" />
                        <!--  Text lines  -->
                        <StackPanel VerticalAlignment="Center">
                            <atc:SkeletonElement
                                Width="140"
                                Height="14"
                                Margin="0,0,0,8"
                                Shape="Rounded" />
                            <atc:SkeletonElement
                                Width="200"
                                Height="12"
                                Margin="0,0,0,6"
                                Shape="Rounded" />
                            <atc:SkeletonElement
                                Width="160"
                                Height="12"
                                Shape="Rounded" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </GroupBox>

            <!--  Section 3: Content Toggle Demo  -->
            <GroupBox Padding="10" Header="Content Toggle (Skeleton Container)">
                <atc:AutoGrid Columns="*" Rows="Auto,*">
                    <atc:UniformSpacingPanel
                        Margin="0,0,0,10"
                        Orientation="Horizontal"
                        Spacing="20">
                        <Button
                            x:Name="BtnLoadData"
                            MinWidth="120"
                            Click="OnLoadDataClick"
                            Content="Load Data" />
                        <TextBlock
                            x:Name="TbStatus"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource AtcApps.Brushes.Text}"
                            Text="Ready" />
                    </atc:UniformSpacingPanel>

                    <atc:Skeleton x:Name="SkeletonContainer" IsLoading="True">
                        <!--  Loading content (skeleton placeholders)  -->
                        <atc:Skeleton.LoadingContent>
                            <StackPanel>
                                <atc:SkeletonElement
                                    Width="200"
                                    Height="20"
                                    Margin="0,0,0,12"
                                    HorizontalAlignment="Left"
                                    Shape="Rounded" />
                                <atc:SkeletonElement
                                    Height="14"
                                    Margin="0,0,0,8"
                                    Shape="Rounded" />
                                <atc:SkeletonElement
                                    Height="14"
                                    Margin="0,0,0,8"
                                    Shape="Rounded" />
                                <atc:SkeletonElement
                                    Width="300"
                                    Height="14"
                                    HorizontalAlignment="Left"
                                    Shape="Rounded" />
                            </StackPanel>
                        </atc:Skeleton.LoadingContent>

                        <!--  Actual content  -->
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="User Profile" />
                            <TextBlock Text="John Doe â€” Software Engineer at Contoso Ltd." />
                            <TextBlock Text="Working on enterprise WPF applications with modern UI patterns." />
                            <TextBlock Text="Located in Copenhagen, Denmark." />
                        </StackPanel>
                    </atc:Skeleton>
                </atc:AutoGrid>
            </GroupBox>

        </atc:AutoGrid>
    </ScrollViewer>

</UserControl>
