<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpfForms.LabelControls.LabelDirectoryPickerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <atc:AutoGrid Columns="*" Rows="Auto,*">

        <GroupBox
            Margin="0,0,0,10"
            Padding="10"
            Header="Features" />

        <GroupBox Header="Usage">
            <ScrollViewer>
                <atc:GridEx Columns="*,*" ShowGridLines="True">
                    <atc:UniformSpacingPanel
                        Grid.Column="0"
                        Orientation="Vertical"
                        Spacing="10">

                        <atc:LabelDirectoryPicker LabelText="MyLabel1" Orientation="Horizontal" />

                        <atc:LabelDirectoryPicker
                            IsMandatory="True"
                            LabelText="MyLabel2"
                            Orientation="Horizontal" />

                        <atc:LabelDirectoryPicker
                            IsMandatory="True"
                            LabelText="MyLabel3"
                            Orientation="Horizontal"
                            ShowClearTextButton="True" />

                        <atc:LabelDirectoryPicker
                            AllowOnlyExisting="True"
                            InitialDirectory="C:\Temp"
                            IsMandatory="True"
                            LabelText="MyLabel4"
                            Orientation="Horizontal"
                            ShowClearTextButton="True" />

                        <atc:LabelDirectoryPicker
                            AllowOnlyExisting="True"
                            InitialDirectory="C:\Temp"
                            IsMandatory="True"
                            LabelText="MyLabel5"
                            Orientation="Horizontal"
                            ShowClearTextButton="True"
                            WatermarkText="Select a directory" />

                    </atc:UniformSpacingPanel>
                    <atc:UniformSpacingPanel
                        Grid.Column="1"
                        Orientation="Vertical"
                        Spacing="10">

                        <atc:LabelDirectoryPicker LabelText="MyLabel3" Orientation="Vertical" />

                    </atc:UniformSpacingPanel>
                </atc:GridEx>
            </ScrollViewer>
        </GroupBox>
    </atc:AutoGrid>

</UserControl>