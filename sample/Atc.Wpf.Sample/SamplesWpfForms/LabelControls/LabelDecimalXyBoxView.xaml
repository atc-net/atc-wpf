<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpfForms.LabelControls.LabelDecimalXyBoxView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <atc:AutoGrid Columns="*" Rows="Auto,*">

        <GroupBox
            Margin="0,0,0,10"
            Padding="10"
            Header="Features" />

        <GroupBox Header="Usage">
            <ScrollViewer>
                <atc:GridEx Columns="*,*" ShowGridLines="True">
                    <StackPanel Grid.Column="0" Margin="10">

                        <atc:LabelDecimalXyBox LabelText="MyLabel1" Orientation="Horizontal" />

                        <atc:LabelDecimalXyBox
                            InformationText="This is a help text.."
                            LabelText="MyLabel2"
                            Orientation="Horizontal"
                            PrefixTextX="x:"
                            PrefixTextY="y:"
                            SuffixText="mm" />

                        <atc:LabelDecimalXyBox
                            HideUpDownButtons="True"
                            InformationText="This is a help text.."
                            LabelText="MyLabel2"
                            Orientation="Horizontal" />

                        <TextBlock Text="DecimalPlaces examples:" FontWeight="Bold" Margin="0,10,0,0" />

                        <atc:LabelDecimalXyBox
                            DecimalPlaces="0"
                            LabelText="0 Decimals"
                            Orientation="Horizontal" />

                        <atc:LabelDecimalXyBox
                            DecimalPlaces="2"
                            LabelText="2 Decimals"
                            Orientation="Horizontal" />

                        <atc:LabelDecimalXyBox
                            DecimalPlaces="4"
                            LabelText="4 Decimals"
                            Orientation="Horizontal" />

                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="10">

                        <atc:LabelDecimalXyBox LabelText="MyLabel3" Orientation="Vertical" />

                        <atc:LabelDecimalXyBox
                            InformationText="This is a help text.."
                            LabelText="MyLabel4"
                            Orientation="Vertical"
                            PrefixTextX="x:"
                            PrefixTextY="y:"
                            SuffixText="mm" />

                        <atc:LabelDecimalXyBox
                            HideUpDownButtons="True"
                            InformationText="This is a help text.."
                            LabelText="MyLabel2"
                            Orientation="Vertical" />

                    </StackPanel>
                </atc:GridEx>
            </ScrollViewer>
        </GroupBox>
    </atc:AutoGrid>

</UserControl>