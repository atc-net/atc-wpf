<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpfForms.LabelControls.LabelCurrencyBoxView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <atc:AutoGrid Columns="*" Rows="Auto,*">

        <GroupBox
            Margin="0,0,0,10"
            Padding="10"
            Header="Features">
            <atc:UniformSpacingPanel Orientation="Horizontal" Spacing="10">
                <TextBlock VerticalAlignment="Center" Text="Currency:" />
                <ComboBox
                    x:Name="CbCurrency"
                    Margin="10,4"
                    SelectedIndex="0"
                    SelectionChanged="OnCurrencyChanged">
                    <ComboBoxItem Content="US Dollar (USD)" Tag="en-US" />
                    <ComboBoxItem Content="Euro (EUR)" Tag="de-DE" />
                    <ComboBoxItem Content="Danish Krone (DKK)" Tag="da-DK" />
                    <ComboBoxItem Content="UK Pound (GBP)" Tag="en-GB" />
                </ComboBox>
            </atc:UniformSpacingPanel>
        </GroupBox>

        <GroupBox Header="Usage">
            <ScrollViewer>
                <atc:GridEx
                    x:Name="UsageGrid"
                    Columns="*,*"
                    ShowGridLines="True">
                    <StackPanel Grid.Column="0" Margin="10">

                        <atc:LabelCurrencyBox LabelText="MyLabel1" Orientation="Horizontal" />

                        <atc:LabelCurrencyBox
                            InformationText="This is a help text.."
                            LabelText="MyLabel2"
                            Orientation="Horizontal"
                            PrefixText="@:"
                            SuffixText="XX" />

                        <atc:LabelCurrencyBox
                            HideUpDownButtons="True"
                            InformationText="This is a help text.."
                            LabelText="MyLabel2"
                            Orientation="Horizontal" />

                        <TextBlock
                            Margin="0,10,0,0"
                            FontWeight="Bold"
                            Text="DecimalPlaces examples:" />

                        <atc:LabelCurrencyBox
                            DecimalPlaces="0"
                            LabelText="0 Decimals"
                            Orientation="Horizontal" />

                        <atc:LabelCurrencyBox
                            DecimalPlaces="2"
                            LabelText="2 Decimals"
                            Orientation="Horizontal" />

                        <atc:LabelCurrencyBox
                            DecimalPlaces="4"
                            LabelText="4 Decimals"
                            Orientation="Horizontal" />

                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="10">

                        <atc:LabelCurrencyBox LabelText="MyLabel3" Orientation="Vertical" />

                        <atc:LabelCurrencyBox
                            InformationText="This is a help text.."
                            LabelText="MyLabel4"
                            Orientation="Vertical"
                            PrefixText="@:"
                            SuffixText="XX" />

                        <atc:LabelCurrencyBox
                            HideUpDownButtons="True"
                            InformationText="This is a help text.."
                            LabelText="MyLabel2"
                            Orientation="Vertical" />

                    </StackPanel>
                </atc:GridEx>
            </ScrollViewer>
        </GroupBox>
    </atc:AutoGrid>

</UserControl>
