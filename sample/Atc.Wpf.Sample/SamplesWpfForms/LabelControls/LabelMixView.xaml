<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpfForms.LabelControls.LabelMixView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Atc.Wpf.Sample.SamplesWpfForms.LabelControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:Atc.Wpf;assembly=Atc.Wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <atc:AutoGrid Columns="*" Rows="Auto,*">

        <GroupBox
            Margin="0,0,0,10"
            Padding="10"
            Header="Features">

            <atc:LabelToggleSwitch
                x:Name="UseLabelPosition"
                HideAreas="All"
                LabelText="Label Position"
                LabelWidthNumber="160"
                LabelWidthSizeDefinition="Pixel"
                OffText="Left"
                OnText="Right" />

        </GroupBox>

        <GroupBox Header="Usage">
            <ScrollViewer>
                <atc:GridEx Columns="*,*" ShowGridLines="True">
                    <StackPanel Grid.Column="0" Margin="10">

                        <atc:LabelCheckBox
                            InformationText="This is a help text.."
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MyCheckBox"
                            Orientation="Horizontal" />

                        <atc:LabelToggleSwitch
                            InformationText="This is a help text.."
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MyToggleSwitch"
                            Orientation="Horizontal" />

                        <atc:LabelComboBox
                            InformationText="This is a help text.."
                            IsMandatory="True"
                            Items="{Binding Source={atc:EnumToKeyValueBindingSource {x:Type wpf:ControlSizeType}, KeyAsString=True, IncludeDefault=True}}"
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MyComboBox"
                            Orientation="Horizontal"
                            SelectedKey="None" />

                        <atc:LabelTextBox
                            InformationText="This is a help text.."
                            IsMandatory="True"
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MyTextBox"
                            Orientation="Horizontal"
                            Text="Hello" />

                        <atc:LabelTextInfo
                            InformationText="This is a help text.."
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MyTextInfo"
                            Orientation="Horizontal"
                            Text="Hello" />

                        <atc:LabelTextBox
                            InformationText="This is a help text.."
                            IsMandatory="True"
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MyTextBox"
                            Orientation="Horizontal"
                            ShowClearTextButton="True"
                            Text="Hello" />

                        <atc:LabelWellKnownColorSelector
                            InformationText="This is a help text.."
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MyColorSelector"
                            Orientation="Horizontal"
                            SelectedKey="Blue" />

                        <atc:LabelContent
                            InformationText="This is a help text.."
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MyContent-TextBox"
                            Orientation="Horizontal">
                            <TextBox />
                        </atc:LabelContent>

                        <atc:LabelDecimalBox
                            InformationText="This is a help text.."
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MyDecimalBox"
                            Orientation="Horizontal"
                            PrefixText="P123"
                            SuffixText="S123" />

                        <atc:LabelIntegerBox
                            InformationText="This is a help text.."
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MyIntegerBox"
                            Maximum="10"
                            Minimum="-10"
                            Orientation="Horizontal"
                            PrefixText="P123"
                            SuffixText="S123"
                            Value="3" />

                        <atc:LabelSlider
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MySlider"
                            Orientation="Horizontal" />

                        <atc:LabelEndpointBox
                            IsMandatory="True"
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MyEndpointBox"
                            NetworkProtocol="OpcTcp"
                            NetworkValidation="IPv4Address"
                            Orientation="Horizontal"
                            ShowClearTextButton="True"
                            WatermarkText="192.168.1.1" />

                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="10">

                        <atc:LabelCheckBox
                            InformationText="This is a help text.."
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MyCheckBox"
                            Orientation="Vertical" />

                        <atc:LabelToggleSwitch
                            InformationText="This is a help text.."
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MyToggleSwitch"
                            Orientation="Vertical" />

                        <atc:LabelComboBox
                            InformationText="This is a help text.."
                            IsMandatory="True"
                            Items="{Binding Source={atc:EnumToKeyValueBindingSource {x:Type wpf:ControlSizeType}, KeyAsString=True, IncludeDefault=True}}"
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MyComboBox"
                            Orientation="Vertical"
                            SelectedKey="None" />

                        <atc:LabelTextBox
                            InformationText="This is a help text.."
                            IsMandatory="True"
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MyTextBox"
                            Orientation="Vertical"
                            Text="Hello" />

                        <atc:LabelTextInfo
                            InformationText="This is a help text.."
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MyTextInfo"
                            Orientation="Vertical"
                            Text="Hello" />

                        <atc:LabelTextBox
                            InformationText="This is a help text.."
                            IsMandatory="True"
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MyTextBox"
                            Orientation="Vertical"
                            ShowClearTextButton="True"
                            Text="Hello" />

                        <atc:LabelWellKnownColorSelector
                            InformationText="This is a help text.."
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            Orientation="Vertical"
                            SelectedKey="Blue" />

                        <atc:LabelContent
                            InformationText="This is a help text.."
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MyContent-TextBox"
                            Orientation="Vertical">
                            <TextBox />
                        </atc:LabelContent>

                        <atc:LabelDecimalBox
                            InformationText="This is a help text.."
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MyDecimalBox"
                            Orientation="Vertical" />

                        <atc:LabelIntegerBox
                            InformationText="This is a help text.."
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MyIntegerBox"
                            Orientation="Vertical" />

                        <atc:LabelSlider
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MySlider"
                            Orientation="Vertical" />

                        <atc:LabelEndpointBox
                            IsMandatory="True"
                            LabelPosition="{Binding ElementName=UseLabelPosition, Path=IsOn, Converter={x:Static local:BoolToLabelPositionValueConverter.Instance}}"
                            LabelText="MyEndpointBox"
                            NetworkProtocol="OpcTcp"
                            NetworkValidation="IPv4Address"
                            Orientation="Vertical"
                            ShowClearTextButton="True"
                            WatermarkText="192.168.1.1" />

                    </StackPanel>
                </atc:GridEx>
            </ScrollViewer>
        </GroupBox>
    </atc:AutoGrid>

</UserControl>
