<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpfForms.PropertyEditing.PropertyGridView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:propertyEditing="clr-namespace:Atc.Wpf.Forms.PropertyEditing;assembly=Atc.Wpf.Forms"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <atc:AutoGrid Columns="*" Rows="Auto,*">

        <GroupBox Padding="10" Header="Features">
            <atc:UniformSpacingPanel Orientation="Vertical" Spacing="10">
                <atc:LabelCheckBox
                    HideAreas="All"
                    IsChecked="{Binding ElementName=SamplePropertyGrid, Path=ShowCategories}"
                    LabelText="Show Categories" />
                <atc:LabelCheckBox
                    HideAreas="All"
                    IsChecked="{Binding ElementName=SamplePropertyGrid, Path=ShowDescriptions}"
                    LabelText="Show Descriptions" />
            </atc:UniformSpacingPanel>
        </GroupBox>

        <GroupBox Header="Usage">

            <propertyEditing:PropertyGrid
                x:Name="SamplePropertyGrid"
                Width="550"
                ShowCategories="False"
                ShowDescriptions="True" />

        </GroupBox>
    </atc:AutoGrid>

</UserControl>