<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpfComponents.Notifications.ToastNotificationServiceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:notifications="clr-namespace:Atc.Wpf.Sample.SamplesWpfComponents.Notifications"
    d:DesignHeight="500"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <notifications:ToastNotificationServiceViewModel />
    </UserControl.DataContext>

    <atc:AutoGrid Columns="*" Rows="Auto,*">

        <GroupBox
            Margin="0,0,0,10"
            Padding="10"
            Header="Features">
            <TextBlock Width="700" TextWrapping="Wrap">
                IToastNotificationService provides a DI-friendly, MVVM service for showing
                toast notifications from ViewModels. It wraps the existing ToastNotificationManager
                with typed convenience methods (ShowInformation, ShowSuccess, ShowWarning, ShowError)
                so callers never need to create ToastNotificationContent manually.
            </TextBlock>
        </GroupBox>

        <GroupBox Header="Usage">
            <DockPanel Margin="20">

                <atc:UniformSpacingPanel
                    DockPanel.Dock="Left"
                    Orientation="Vertical"
                    Spacing="20">

                    <GroupBox Padding="10" Header="Severity Levels">
                        <atc:UniformSpacingPanel
                            ItemWidth="100"
                            Orientation="Horizontal"
                            Spacing="10">
                            <Button
                                Command="{Binding ShowInformationCommand}"
                                Content="Information"
                                Style="{StaticResource ButtonInfo}" />
                            <Button
                                Command="{Binding ShowSuccessCommand}"
                                Content="Success"
                                Style="{StaticResource ButtonSuccess}" />
                            <Button
                                Command="{Binding ShowWarningCommand}"
                                Content="Warning"
                                Style="{StaticResource ButtonWarning}" />
                            <Button
                                Command="{Binding ShowErrorCommand}"
                                Content="Error"
                                Style="{StaticResource ButtonDanger}" />
                        </atc:UniformSpacingPanel>
                    </GroupBox>

                    <GroupBox Padding="10" Header="Desktop">
                        <Button
                            MinWidth="100"
                            Command="{Binding ShowDesktopCommand}"
                            Content="Desktop"
                            Style="{StaticResource ButtonInfo}" />
                    </GroupBox>

                    <GroupBox Padding="10" Header="Options">
                        <atc:UniformSpacingPanel
                            ItemWidth="130"
                            Orientation="Horizontal"
                            Spacing="10">
                            <Button
                                Command="{Binding ShowCustomDurationCommand}"
                                Content="10s Duration" />
                            <Button
                                Command="{Binding ShowWithClickActionCommand}"
                                Content="Click Action" />
                        </atc:UniformSpacingPanel>
                    </GroupBox>
                </atc:UniformSpacingPanel>

                <atc:ToastNotificationArea
                    x:Name="ServiceArea"
                    MaxItems="5"
                    Position="TopRight" />
            </DockPanel>
        </GroupBox>

    </atc:AutoGrid>

</UserControl>
