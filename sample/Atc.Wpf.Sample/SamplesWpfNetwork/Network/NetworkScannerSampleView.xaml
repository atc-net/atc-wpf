<UserControl
    x:Class="Atc.Wpf.Sample.SamplesWpfNetwork.Network.NetworkScannerSampleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Atc.Wpf.Sample.SamplesWpfNetwork.Network"
    xmlns:network="clr-namespace:Atc.Wpf.Network;assembly=Atc.Wpf.Network"
    d:DataContext="{d:DesignInstance Type=local:NetworkScannerSampleViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <atc:GridEx Columns="*" Rows="Auto,*,Auto">

        <GroupBox
            Grid.Row="0"
            Margin="0,0,0,10"
            Padding="10"
            Header="Settings">
            <network:NetworkScannerSettingsView DataContext="{Binding Path=NetworkScanner}" />
        </GroupBox>

        <GroupBox
            Grid.Row="1"
            Padding="10"
            Header="Network Scanner">
            <network:NetworkScannerView DataContext="{Binding Path=NetworkScanner}" />
        </GroupBox>

        <GroupBox
            Grid.Row="2"
            Margin="0,10,0,0"
            Padding="10"
            DataContext="{Binding Path=NetworkScanner.SelectedEntry}"
            Header="Selected Entry">
            <atc:GridEx Columns="*,*,*" Rows="Auto,Auto">
                <atc:LabelTextInfo
                    Grid.Row="0"
                    Grid.Column="0"
                    HideAreas="All"
                    LabelText="IP Address"
                    Text="{Binding Path=IpAddress, FallbackValue='-', TargetNullValue='-'}" />
                <atc:LabelTextInfo
                    Grid.Row="1"
                    Grid.Column="0"
                    HideAreas="All"
                    LabelText="Hostname"
                    Text="{Binding Path=Hostname, FallbackValue='-', TargetNullValue='-'}" />
                <atc:LabelTextInfo
                    Grid.Row="0"
                    Grid.Column="1"
                    HideAreas="All"
                    LabelText="MAC Address"
                    Text="{Binding Path=MacAddress, FallbackValue='-', TargetNullValue='-'}" />
                <atc:LabelTextInfo
                    Grid.Row="1"
                    Grid.Column="1"
                    HideAreas="All"
                    LabelText="MAC Vendor"
                    Text="{Binding Path=MacVendor, FallbackValue='-', TargetNullValue='-'}" />
                <atc:LabelTextInfo
                    Grid.Row="0"
                    Grid.Column="2"
                    HideAreas="All"
                    LabelText="Open Ports"
                    Text="{Binding Path=OpenPortNumbersAsCommaList, FallbackValue='-', TargetNullValue='-'}" />
            </atc:GridEx>
        </GroupBox>

    </atc:GridEx>

</UserControl>
