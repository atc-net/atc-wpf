<TreeView
    x:Class="Atc.Wpf.Sample.SamplesWpfThemingTreeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="230"
    mc:Ignorable="d">

    <TreeViewItem Header="Input - Button" IsExpanded="True">
        <atc:SampleTreeViewItem
            Header="Button"
            IsExpanded="True"
            SamplePath="InputButton.ButtonView" />
        <atc:SampleTreeViewItem
            Header="ImageButton"
            IsExpanded="True"
            SamplePath="InputButton.ImageButtonView" />
        <TreeViewItem
            Header="ToggleButton"
            IsEnabled="False"
            IsExpanded="True" />
        <atc:SampleTreeViewItem
            Header="RadioButton"
            IsExpanded="True"
            SamplePath="InputButton.RadioButtonView" />
        <TreeViewItem
            Header="RepeatButton"
            IsEnabled="False"
            IsExpanded="True" />
    </TreeViewItem>
    <TreeViewItem Header="Input - Box" IsExpanded="True">
        <atc:SampleTreeViewItem
            Header="CheckBox"
            IsExpanded="True"
            SamplePath="InputBox.CheckBoxView" />
        <atc:SampleTreeViewItem
            Header="ComboBox"
            IsExpanded="True"
            SamplePath="InputBox.ComboBoxView" />
        <atc:SampleTreeViewItem
            Header="TextBox"
            IsExpanded="True"
            SamplePath="InputBox.TextBoxView" />
        <TreeViewItem
            Header="PasswordBox"
            IsEnabled="False"
            IsExpanded="True" />
    </TreeViewItem>
    <TreeViewItem Header="Layout" IsExpanded="True">
        <TreeViewItem
            Header="GroupBox"
            IsEnabled="False"
            IsExpanded="True" />
    </TreeViewItem>
    <TreeViewItem Header="Misc" IsExpanded="True">
        <TreeViewItem
            Header="Expander"
            IsEnabled="False"
            IsExpanded="True" />
        <atc:SampleTreeViewItem
            Header="Label"
            IsExpanded="True"
            SamplePath="Misc.LabelView" />
        <atc:SampleTreeViewItem
            Header="ListBox"
            IsExpanded="True"
            SamplePath="Misc.ListBoxView" />
        <atc:SampleTreeViewItem
            Header="ListView"
            IsExpanded="True"
            SamplePath="Misc.ListViewView" />
        <atc:SampleTreeViewItem
            Header="Menu"
            IsExpanded="True"
            SamplePath="Misc.MenuView" />
        <TreeViewItem
            Header="ScrollBar"
            IsEnabled="False"
            IsExpanded="True" />
        <TreeViewItem
            Header="ScrollViewer"
            IsEnabled="False"
            IsExpanded="True" />
        <TreeViewItem
            Header="Slider"
            IsEnabled="False"
            IsExpanded="True" />
        <atc:SampleTreeViewItem
            Header="TabControl"
            IsExpanded="True"
            SamplePath="Misc.TabControlView" />
        <atc:SampleTreeViewItem
            Header="TextBlock"
            IsExpanded="True"
            SamplePath="Misc.TextBlockView" />
        <TreeViewItem
            Header="ToolBar"
            IsEnabled="False"
            IsExpanded="True" />
        <atc:SampleTreeViewItem
            Header="TreeView"
            IsExpanded="True"
            SamplePath="Misc.TreeViewView" />
    </TreeViewItem>
    <atc:SampleTreeViewItem
        Header="Mix"
        IsExpanded="True"
        SamplePath="MixView" />

</TreeView>