<UserControl
    x:Class="Atc.Wpf.Theming.Controls.Selectors.AccentColorSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atcTranslation="https://github.com/atc-net/atc-wpf/tree/main/schemas/translations"
    xmlns:atcValueConverters="https://github.com/atc-net/atc-wpf/tree/main/schemas/value-converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:selectors="clr-namespace:Atc.Wpf.Theming.Controls.Selectors"
    x:Name="UcAccentColorSelector"
    d:DataContext="{d:DesignInstance Type=selectors:AccentColorSelector}"
    d:DesignHeight="50"
    d:DesignWidth="200"
    mc:Ignorable="d">

    <UserControl.Resources>
        <atcValueConverters:BoolToVisibilityVisibleValueConverter x:Key="BoolToVisibilityVisibleConverter" />
        <atcValueConverters:LabelControlOrientationToMarginValueConverter x:Key="LabelControlOrientationToMarginConverter" />
        <selectors:RenderColorIndicatorTypeToVisibilityValueConverter x:Key="RenderColorIndicatorTypeToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel Orientation="{Binding ElementName=UcAccentColorSelector, Path=Orientation}">
            <TextBlock
                Margin="{Binding ElementName=UcAccentColorSelector, Path=Orientation, Converter={StaticResource LabelControlOrientationToMarginConverter}}"
                VerticalAlignment="Center"
                Text="{atcTranslation:Resx ResxName=Atc.Wpf.Theming.Resource.Miscellaneous,
                                           Key=AccentColor,
                                           Suffix=':'}"
                Visibility="{Binding ElementName=UcAccentColorSelector, Path=ShowLabel, Converter={StaticResource BoolToVisibilityVisibleConverter}}" />
            <ComboBox
                Height="22"
                MinWidth="100"
                ItemsSource="{Binding Path=Items}"
                SelectedValue="{Binding Path=SelectedKey}"
                SelectedValuePath="Name">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle
                                Width="15"
                                Height="15"
                                Margin="0,0,5,0"
                                Fill="{Binding ColorBrush}"
                                Stroke="{Binding BorderColorBrush}"
                                StrokeThickness="1"
                                Visibility="{Binding ElementName=UcAccentColorSelector, Path=RenderColorIndicatorType, Converter={StaticResource RenderColorIndicatorTypeToVisibilityConverter}, ConverterParameter={x:Static selectors:RenderColorIndicatorType.Square}}" />
                            <Ellipse
                                Width="15"
                                Height="15"
                                Margin="0,0,5,0"
                                Fill="{Binding ColorBrush}"
                                Stroke="{Binding BorderColorBrush}"
                                StrokeThickness="1"
                                Visibility="{Binding ElementName=UcAccentColorSelector, Path=RenderColorIndicatorType, Converter={StaticResource RenderColorIndicatorTypeToVisibilityConverter}, ConverterParameter={x:Static selectors:RenderColorIndicatorType.Circle}}" />
                            <TextBlock Text="{Binding DisplayName}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
    </Grid>

</UserControl>
