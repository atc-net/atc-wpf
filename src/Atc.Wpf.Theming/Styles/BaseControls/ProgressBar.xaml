<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Base  -->
    <Style x:Key="AtcApps.Styles.ProgressBar" TargetType="{x:Type ProgressBar}">
        <Setter Property="Background" Value="{DynamicResource AtcApps.Brushes.ThemeBackground}" />
        <Setter Property="Foreground" Value="{DynamicResource AtcApps.Brushes.AccentBase}" />
        <Setter Property="Height" Value="20" />
        <Setter Property="IsIndeterminate" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
    </Style>

</ResourceDictionary>