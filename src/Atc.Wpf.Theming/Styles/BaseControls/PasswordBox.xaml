                        <Trigger SourceName="PART_RevealTextButton" Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_RevealTextButtonIcon" Property="Fill" Value="{DynamicResource AtcApps.Brushes.Accent}" />
