<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <FontFamily x:Key="AtcApps.Fonts.Family.Window.Title">Verdana</FontFamily>
    <FontFamily x:Key="AtcApps.Fonts.Family.Header">Verdana</FontFamily>
    <FontFamily x:Key="AtcApps.Fonts.Family.Button">Verdana</FontFamily>
    <FontFamily x:Key="AtcApps.Fonts.Family.ContentControlTheme">Verdana</FontFamily>
    <FontFamily x:Key="AtcApps.Fonts.Family.Control">Verdana</FontFamily>

    <system:Double x:Key="AtcApps.Font.Size.Window.Title">16</system:Double>
    <system:Double x:Key="AtcApps.Font.Size.Default">14</system:Double>
    <system:Double x:Key="AtcApps.Font.Size.Content">12</system:Double>

</ResourceDictionary>