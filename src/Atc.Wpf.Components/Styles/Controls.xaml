<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:flyouts="clr-namespace:Atc.Wpf.Components.Flyouts"
    xmlns:notifications="clr-namespace:Atc.Wpf.Components.Notifications"
    xmlns:selectors="clr-namespace:Atc.Wpf.Components.Selectors">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Atc.Wpf.Components;component/Flyouts/Flyout.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Atc.Wpf.Components;component/Flyouts/FlyoutHost.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Atc.Wpf.Components;component/Notifications/ToastNotification.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Atc.Wpf.Components;component/Selectors/DualListSelector.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style BasedOn="{StaticResource AtcApps.Styles.Flyout}" TargetType="{x:Type flyouts:Flyout}" />
    <Style BasedOn="{StaticResource AtcApps.Styles.FlyoutHost}" TargetType="{x:Type flyouts:FlyoutHost}" />
    <Style BasedOn="{StaticResource AtcApps.Styles.ToastNotification}" TargetType="{x:Type notifications:ToastNotification}" />
    <Style BasedOn="{StaticResource AtcApps.Styles.ToastNotificationArea}" TargetType="{x:Type notifications:ToastNotificationArea}" />
    <Style BasedOn="{StaticResource AtcApps.Styles.DualListSelector}" TargetType="{x:Type selectors:DualListSelector}" />

</ResourceDictionary>
