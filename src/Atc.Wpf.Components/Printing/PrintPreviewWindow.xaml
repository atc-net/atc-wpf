<theming:NiceWindow
    x:Class="Atc.Wpf.Components.Printing.PrintPreviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:theming="clr-namespace:Atc.Wpf.Theming.Controls.Windows;assembly=Atc.Wpf.Theming"
    Title="Print Preview"
    Width="900"
    Height="700"
    MinWidth="600"
    MinHeight="400"
    ShowMaxRestoreButton="True"
    ShowMinButton="False"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <DockPanel>

        <ToolBarTray DockPanel.Dock="Top" IsLocked="True">
            <ToolBar Band="0" BandIndex="0">
                <Button
                    x:Name="PrintButton"
                    Padding="8,4"
                    Click="PrintButton_Click"
                    Content="Print"
                    ToolTip="Send to printer" />
                <Separator />
                <Button
                    x:Name="CloseButton"
                    Padding="8,4"
                    Click="CloseButton_Click"
                    Content="Close"
                    ToolTip="Close preview" />
            </ToolBar>
        </ToolBarTray>

        <DocumentViewer
            x:Name="PreviewViewer"
            Background="{DynamicResource AtcApps.Brushes.ThemeBackground}" />

    </DockPanel>

</theming:NiceWindow>
