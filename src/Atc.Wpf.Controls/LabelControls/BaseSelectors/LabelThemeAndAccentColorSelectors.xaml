<UserControl
    x:Class="Atc.Wpf.Controls.LabelControls.LabelThemeAndAccentColorSelectors"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:labelControls="clr-namespace:Atc.Wpf.Controls.LabelControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="UcLabelThemeAndAccentColorSelectors"
    d:DataContext="{d:DesignInstance Type=labelControls:LabelThemeAndAccentColorSelectors}"
    mc:Ignorable="d">

    <StackPanel Orientation="{Binding ElementName=UcLabelThemeAndAccentColorSelectors, Path=Orientation}">
        <labelControls:LabelThemeSelector Orientation="{Binding ElementName=UcLabelThemeAndAccentColorSelectors, Path=LabelControlOrientation}" RenderColorIndicatorType="{Binding ElementName=UcLabelThemeAndAccentColorSelectors, Path=RenderColorIndicatorType}" />
        <labelControls:LabelAccentColorSelector Orientation="{Binding ElementName=UcLabelThemeAndAccentColorSelectors, Path=LabelControlOrientation}" RenderColorIndicatorType="{Binding ElementName=UcLabelThemeAndAccentColorSelectors, Path=RenderColorIndicatorType}" />
    </StackPanel>

</UserControl>
