<UserControl
    x:Class="Atc.Wpf.Controls.LabelControls.Parts.LabelControlInformationIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="UcLabelControlInformationIcon"
    mc:Ignorable="d">

    <atc:SvgImage
        Width="16"
        Height="16"
        VerticalAlignment="Top"
        OverrideColor="{Binding ElementName=UcLabelControlInformationIcon, Path=InformationColor, FallbackValue=DodgerBlue}"
        Source="/Atc.Wpf.Controls;component/Resources/info_help.svg">
        <atc:SvgImage.ToolTip>
            <!--  ReSharper disable once Xaml.BindingWithContextNotResolved  -->
            <ToolTip DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                <StackPanel>
                    <TextBlock Text="{Binding Path=InformationText}" />
                </StackPanel>
            </ToolTip>
        </atc:SvgImage.ToolTip>
    </atc:SvgImage>

</UserControl>
