                                            Width="70"
                                            Height="20"
                                            Columns="Auto,5,Auto,5,Auto">
                                            <Ellipse
                                                x:Name="PART_Ellipse0"
                                                Grid.Column="0"
                                                Fill="{TemplateBinding Foreground}" />
                                            <Ellipse
                                                x:Name="PART_Ellipse1"
                                                Grid.Column="2"
                                                Fill="{TemplateBinding Foreground}" />
                                            <Ellipse
