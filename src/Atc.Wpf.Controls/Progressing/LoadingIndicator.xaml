                                            Grid.RowSpan="1"
                                            Grid.Column="2"
                                            Grid.ColumnSpan="1"
                                            Fill="{TemplateBinding Foreground}" />
                                        <Ellipse
                                            x:Name="PART_Ellipse1"
                                            Grid.Row="0"
                                            Grid.RowSpan="2"
                                            Grid.Column="3"
                                            Grid.ColumnSpan="2"
                                            Fill="{TemplateBinding Foreground}" />
                                        <Ellipse
