<UserControl
    x:Class="Atc.Wpf.Controls.Monitoring.ApplicationMonitorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:atcTranslation="https://github.com/atc-net/atc-wpf/tree/main/schemas/translations"
    xmlns:atcValueConverters="https://github.com/atc-net/atc-wpf/tree/main/schemas/value-converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Atc.Wpf.Controls.Monitoring"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:ApplicationMonitorViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <atcValueConverters:BoolToWidthValueConverter x:Key="BoolToWidthValueConverter" />
        <atcValueConverters:BoolToVisibilityVisibleValueConverter x:Key="BoolToVisibilityVisibleValueConverter" />
    </UserControl.Resources>

    <atc:GridEx Columns="*" Rows="Auto,*">
        <DockPanel Grid.Row="0">
            <ToolBarTray Visibility="{Binding Path=ShowToolbar, Converter={StaticResource BoolToVisibilityVisibleValueConverter}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:ApplicationMonitorView}}}">
                <ToolBar ToolBarTray.IsLocked="True">
                    <Button Command="{Binding Path=ClearCommand}" Visibility="{Binding Path=ShowClearInToolbar, Converter={StaticResource BoolToVisibilityVisibleValueConverter}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:ApplicationMonitorView}}}">
                        <Image
                            Width="16"
                            Height="16"
                            Margin="1,1,0,0"
                            Source="pack://application:,,,/Atc.Wpf.Controls;component/Resources/Images/eraser.png"
                            ToolTip="{atcTranslation:Resx ResxName=Atc.Wpf.Controls.Resources.Miscellaneous,
                                                          Key=ClearAll}" />
                    </Button>

                    <ToggleButton IsChecked="{Binding Path=AutoScroll, Mode=TwoWay}" Visibility="{Binding Path=ShowAutoScrollInToolbar, Converter={StaticResource BoolToVisibilityVisibleValueConverter}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:ApplicationMonitorView}}}">
                        <Image
                            Width="16"
                            Height="16"
                            Margin="1,1,0,0"
                            Source="pack://application:,,,/Atc.Wpf.Controls;component/Resources/Images/scrollrefresh.png"
                            ToolTip="{atcTranslation:Resx ResxName=Atc.Wpf.Controls.Resources.Miscellaneous,
                                                          Key=Auto}" />
                    </ToggleButton>

                    <Separator Margin="5,0" />

                    <ToggleButton Command="{Binding Path=FilterChangeCommand}" IsChecked="{Binding Path=Filter.SeverityError, Mode=TwoWay}">
                        <Image
                            Width="16"
                            Height="16"
                            Margin="1,1,0,0"
                            Source="pack://application:,,,/Atc.Wpf.Controls;component/Resources/Images/error.png"
                            ToolTip="{atcTranslation:Resx ResxName=Atc.Wpf.Controls.Resources.Miscellaneous,
                                                          Key=Errors}" />
                    </ToggleButton>

                    <ToggleButton Command="{Binding Path=FilterChangeCommand}" IsChecked="{Binding Path=Filter.SeverityWarning, Mode=TwoWay}">
                        <Image
                            Width="16"
                            Height="16"
                            Margin="1,1,0,0"
                            Source="pack://application:,,,/Atc.Wpf.Controls;component/Resources/Images/warning.png"
                            ToolTip="{atcTranslation:Resx ResxName=Atc.Wpf.Controls.Resources.Miscellaneous,
                                                          Key=Warnings}" />
                    </ToggleButton>

                    <ToggleButton Command="{Binding Path=FilterChangeCommand}" IsChecked="{Binding Path=Filter.SeverityInformation, Mode=TwoWay}">
                        <Image
                            Width="16"
                            Height="16"
                            Margin="1,1,0,0"
                            Source="pack://application:,,,/Atc.Wpf.Controls;component/Resources/Images/information.png"
                            ToolTip="{atcTranslation:Resx ResxName=Atc.Wpf.Controls.Resources.Miscellaneous,
                                                          Key=Information}" />
                    </ToggleButton>

                    <Separator Margin="5,0" />

                    <TextBox
                        Width="150"
                        Text="{Binding Path=MatchOnText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{Binding Path=ShowSearchInToolbar, Converter={StaticResource BoolToVisibilityVisibleValueConverter}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:ApplicationMonitorView}}}" />
                </ToolBar>
            </ToolBarTray>
        </DockPanel>
        <DockPanel Grid.Row="1">
            <ListView
                x:Name="LvEntries"
                ItemsSource="{Binding Path=Entries}"
                SelectedItem="{Binding Path=SelectedEntry, Mode=TwoWay}"
                SelectionMode="Single">
                <ListView.View>
                    <GridView x:Name="GvEntryView">
                        <GridViewColumn
                            x:Name="GvcTimestamp"
                            Width="120px"
                            Header="{atcTranslation:Resx ResxName=Atc.Wpf.Controls.Resources.Miscellaneous,
                                                         Key=Timestamp}">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate DataType="local:ApplicationEventEntry">
                                    <TextBlock Text="{Binding Path=Timestamp, StringFormat=yyyy-MM-dd HH:mm:ss}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn x:Name="GvcLogCategoryType" Width="28px">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate DataType="local:ApplicationEventEntry">
                                    <Image
                                        Width="16"
                                        Height="16"
                                        Source="{Binding Path=LogCategoryTypeImage}">
                                        <Image.ToolTip>
                                            <ToolTip Content="{Binding Path=LogCategoryTypeToolTip}" />
                                        </Image.ToolTip>
                                    </Image>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn
                            x:Name="GvcArea"
                            Width="{Binding Path=ShowColumnArea, Converter={StaticResource BoolToWidthValueConverter}, ConverterParameter=150}"
                            Header="{atcTranslation:Resx ResxName=Atc.Wpf.Controls.Resources.Miscellaneous,
                                                         Key=Area}">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate DataType="local:ApplicationEventEntry">
                                    <TextBlock Text="{Binding Path=Area}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn
                            x:Name="GvcMessage"
                            Width="400px"
                            Header="{atcTranslation:Resx ResxName=Atc.Wpf.Controls.Resources.Miscellaneous,
                                                         Key=Message}">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate DataType="local:ApplicationEventEntry">
                                    <TextBlock Text="{Binding Path=Message}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>
    </atc:GridEx>

</UserControl>