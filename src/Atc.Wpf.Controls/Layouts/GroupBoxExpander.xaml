<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atcValueConverters="https://github.com/atc-net/atc-wpf/tree/main/schemas/value-converters"
    xmlns:enums="clr-namespace:Atc.Wpf.Theming;assembly=Atc.Wpf.Theming"
    xmlns:helpers="clr-namespace:Atc.Wpf.Controls.Helpers"
    xmlns:layouts="clr-namespace:Atc.Wpf.Controls.Layouts"
    xmlns:valueConverters="clr-namespace:Atc.Wpf.Theming.ValueConverters;assembly=Atc.Wpf.Theming"
    xmlns:wpf="clr-namespace:Atc.Wpf;assembly=Atc.Wpf">

    <Style x:Key="AtcApps.Styles.GroupBoxExpander.ToggleButton" TargetType="{x:Type ToggleButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Grid Background="Transparent" SnapsToDevicePixels="False">
                        <Ellipse
                            x:Name="circle"
                            Width="19"
                            Height="19"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Fill="{Binding Path=(helpers:GroupBoxExpanderHelper.ToggleCircleFill), RelativeSource={RelativeSource AncestorType={x:Type layouts:GroupBoxExpander}}}"
                            Stroke="{Binding Path=(helpers:GroupBoxExpanderHelper.ToggleCircleStroke), RelativeSource={RelativeSource AncestorType={x:Type layouts:GroupBoxExpander}}}" />
                        <Path
                            x:Name="arrow"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Data="M 1,4.5 L 4.5,1 L 8,4.5"
                            SnapsToDevicePixels="false"
                            Stroke="{Binding Path=(helpers:GroupBoxExpanderHelper.ToggleArrowStroke), RelativeSource={RelativeSource AncestorType={x:Type layouts:GroupBoxExpander}}}"
                            StrokeThickness="2" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter TargetName="arrow" Property="Data" Value="M 1,1.5 L 4.5,5 L 8,1.5" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="circle" Property="Stroke" Value="{Binding Path=(helpers:GroupBoxExpanderHelper.ToggleCircleStrokeMouseOver), RelativeSource={RelativeSource AncestorType={x:Type layouts:GroupBoxExpander}}}" />
                            <Setter TargetName="circle" Property="Fill" Value="{Binding Path=(helpers:GroupBoxExpanderHelper.ToggleCircleFillMouseOver), RelativeSource={RelativeSource AncestorType={x:Type layouts:GroupBoxExpander}}}" />
                            <Setter TargetName="arrow" Property="Stroke" Value="{Binding Path=(helpers:GroupBoxExpanderHelper.ToggleArrowStrokeMouseOver), RelativeSource={RelativeSource AncestorType={x:Type layouts:GroupBoxExpander}}}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="circle" Property="Stroke" Value="{Binding Path=(helpers:GroupBoxExpanderHelper.ToggleCircleStrokePressed), RelativeSource={RelativeSource AncestorType={x:Type layouts:GroupBoxExpander}}}" />
                            <Setter TargetName="circle" Property="StrokeThickness" Value="1.5" />
                            <Setter TargetName="circle" Property="Fill" Value="{Binding Path=(helpers:GroupBoxExpanderHelper.ToggleCircleFillPressed), RelativeSource={RelativeSource AncestorType={x:Type layouts:GroupBoxExpander}}}" />
                            <Setter TargetName="arrow" Property="Stroke" Value="{Binding Path=(helpers:GroupBoxExpanderHelper.ToggleArrowStrokePressed), RelativeSource={RelativeSource AncestorType={x:Type layouts:GroupBoxExpander}}}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="circle" Property="Stroke" Value="{Binding Path=(helpers:GroupBoxExpanderHelper.ToggleCircleStrokeDisabled), RelativeSource={RelativeSource AncestorType={x:Type layouts:GroupBoxExpander}}}" />
                            <Setter TargetName="circle" Property="Fill" Value="{Binding Path=(helpers:GroupBoxExpanderHelper.ToggleCircleFillDisabled), RelativeSource={RelativeSource AncestorType={x:Type layouts:GroupBoxExpander}}}" />
                            <Setter TargetName="arrow" Property="Stroke" Value="{Binding Path=(helpers:GroupBoxExpanderHelper.ToggleArrowStrokeDisabled), RelativeSource={RelativeSource AncestorType={x:Type layouts:GroupBoxExpander}}}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="AtcApps.Styles.GroupBoxExpander" TargetType="{x:Type layouts:GroupBoxExpander}">
        <Setter Property="Background" Value="{DynamicResource AtcApps.Brushes.ThemeBackground}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AtcApps.Brushes.Accent}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{DynamicResource AtcApps.CornerRadius.GroupBox}" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Foreground" Value="{DynamicResource AtcApps.Brushes.Text}" />
        <Setter Property="HeaderBackground" Value="{DynamicResource AtcApps.Brushes.Accent}" />
        <Setter Property="HeaderForeground" Value="{x:Null}" />
        <Setter Property="HeaderPadding" Value="4" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <!--  Toggle button static state  -->
        <Setter Property="helpers:GroupBoxExpanderHelper.ToggleCircleFill" Value="{DynamicResource Expander.Static.Circle.Fill}" />
        <Setter Property="helpers:GroupBoxExpanderHelper.ToggleCircleStroke" Value="{DynamicResource Expander.Static.Circle.Stroke}" />
        <Setter Property="helpers:GroupBoxExpanderHelper.ToggleArrowStroke" Value="{DynamicResource Expander.Static.Arrow.Stroke}" />
        <!--  Toggle button mouse over state  -->
        <Setter Property="helpers:GroupBoxExpanderHelper.ToggleCircleFillMouseOver" Value="{DynamicResource Expander.MouseOver.Circle.Fill}" />
        <Setter Property="helpers:GroupBoxExpanderHelper.ToggleCircleStrokeMouseOver" Value="{DynamicResource Expander.MouseOver.Circle.Stroke}" />
        <Setter Property="helpers:GroupBoxExpanderHelper.ToggleArrowStrokeMouseOver" Value="{DynamicResource Expander.MouseOver.Arrow.Stroke}" />
        <!--  Toggle button pressed state  -->
        <Setter Property="helpers:GroupBoxExpanderHelper.ToggleCircleFillPressed" Value="{DynamicResource Expander.Pressed.Circle.Fill}" />
        <Setter Property="helpers:GroupBoxExpanderHelper.ToggleCircleStrokePressed" Value="{DynamicResource Expander.Pressed.Circle.Stroke}" />
        <Setter Property="helpers:GroupBoxExpanderHelper.ToggleArrowStrokePressed" Value="{DynamicResource Expander.Pressed.Arrow.Stroke}" />
        <!--  Toggle button disabled state  -->
        <Setter Property="helpers:GroupBoxExpanderHelper.ToggleCircleFillDisabled" Value="{DynamicResource Expander.Disabled.Circle.Fill}" />
        <Setter Property="helpers:GroupBoxExpanderHelper.ToggleCircleStrokeDisabled" Value="{DynamicResource Expander.Disabled.Circle.Stroke}" />
        <Setter Property="helpers:GroupBoxExpanderHelper.ToggleArrowStrokeDisabled" Value="{DynamicResource Expander.Disabled.Arrow.Stroke}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type layouts:GroupBoxExpander}">
                    <Grid x:Name="GroupBoxExpanderRoot">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  Header  -->
                        <Border
                            x:Name="HeaderBorder"
                            Grid.Row="0"
                            Background="{TemplateBinding HeaderBackground}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=CornerRadius, Converter={x:Static valueConverters:CornerRadiusBindingValueConverter.Instance}, ConverterParameter={x:Static enums:RadiusType.Bottom}}"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                            UseLayoutRounding="True">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition x:Name="ToggleButtonColumn" Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition x:Name="ToggleButtonRightColumn" Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <ToggleButton
                                    x:Name="ExpanderToggleButton"
                                    Grid.Column="0"
                                    Margin="4,0,4,0"
                                    VerticalAlignment="Center"
                                    IsChecked="{Binding IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                    Style="{StaticResource AtcApps.Styles.GroupBoxExpander.ToggleButton}" />

                                <ContentPresenter
                                    x:Name="HeaderContent"
                                    Grid.Column="1"
                                    Margin="{TemplateBinding HeaderPadding}"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="Center"
                                    ContentSource="Header"
                                    ContentStringFormat="{TemplateBinding HeaderStringFormat}"
                                    ContentTemplate="{TemplateBinding HeaderTemplate}"
                                    ContentTemplateSelector="{TemplateBinding HeaderTemplateSelector}"
                                    RecognizesAccessKey="True"
                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                    UseLayoutRounding="False">
                                    <TextElement.Foreground>
                                        <MultiBinding Converter="{x:Static atcValueConverters:BackgroundToForegroundValueConverter.Instance}">
                                            <Binding
                                                Mode="OneWay"
                                                Path="HeaderBackground"
                                                RelativeSource="{RelativeSource TemplatedParent}" />
                                            <Binding
                                                Mode="OneWay"
                                                Path="HeaderForeground"
                                                RelativeSource="{RelativeSource TemplatedParent}" />
                                        </MultiBinding>
                                    </TextElement.Foreground>
                                </ContentPresenter>
                            </Grid>
                        </Border>

                        <!--  Content  -->
                        <Border
                            x:Name="ContentBorder"
                            Grid.Row="1"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=BorderThickness, Converter={x:Static atcValueConverters:ThicknessBindingValueConverter.Instance}, ConverterParameter={x:Static wpf:ThicknessSideType.Top}}"
                            CornerRadius="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=CornerRadius, Converter={x:Static valueConverters:CornerRadiusBindingValueConverter.Instance}, ConverterParameter={x:Static enums:RadiusType.Top}}"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                            UseLayoutRounding="True"
                            Visibility="Visible">
                            <ContentPresenter
                                Margin="{TemplateBinding Padding}"
                                Content="{TemplateBinding Content}"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                Cursor="{TemplateBinding Cursor}"
                                UseLayoutRounding="False" />
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!--  Collapsed state  -->
                        <Trigger Property="IsExpanded" Value="False">
                            <Setter TargetName="ContentBorder" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="HeaderBorder" Property="CornerRadius" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=CornerRadius}" />
                        </Trigger>

                        <!--  Right button placement  -->
                        <Trigger Property="ExpanderButtonLocation" Value="Right">
                            <Setter TargetName="ExpanderToggleButton" Property="Grid.Column" Value="2" />
                        </Trigger>

                        <!--  Disabled state  -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
