<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atcValueConverters="https://github.com/atc-net/atc-wpf/tree/main/schemas/value-converters"
    xmlns:enums="clr-namespace:Atc.Wpf.Theming;assembly=Atc.Wpf.Theming"
    xmlns:helpers="clr-namespace:Atc.Wpf.Controls.Helpers"
    xmlns:layouts="clr-namespace:Atc.Wpf.Controls.Layouts"
    xmlns:valueConverters="clr-namespace:Atc.Wpf.Theming.ValueConverters;assembly=Atc.Wpf.Theming"
    xmlns:wpf="clr-namespace:Atc.Wpf;assembly=Atc.Wpf">

    <!--  Shadow effects for different elevation levels  -->
    <DropShadowEffect
        x:Key="AtcApps.Effects.Card.Elevation0"
        BlurRadius="0"
        Direction="270"
        Opacity="0"
        ShadowDepth="0"
        Color="Black" />

    <DropShadowEffect
        x:Key="AtcApps.Effects.Card.Elevation1"
        BlurRadius="3"
        Direction="270"
        Opacity="0.12"
        ShadowDepth="1"
        Color="Black" />

    <DropShadowEffect
        x:Key="AtcApps.Effects.Card.Elevation2"
        BlurRadius="6"
        Direction="270"
        Opacity="0.14"
        ShadowDepth="2"
        Color="Black" />

    <DropShadowEffect
        x:Key="AtcApps.Effects.Card.Elevation3"
        BlurRadius="8"
        Direction="270"
        Opacity="0.16"
        ShadowDepth="3"
        Color="Black" />

    <DropShadowEffect
        x:Key="AtcApps.Effects.Card.Elevation4"
        BlurRadius="12"
        Direction="270"
        Opacity="0.18"
        ShadowDepth="4"
        Color="Black" />

    <DropShadowEffect
        x:Key="AtcApps.Effects.Card.Elevation5"
        BlurRadius="16"
        Direction="270"
        Opacity="0.20"
        ShadowDepth="5"
        Color="Black" />

    <Style x:Key="AtcApps.Styles.Card.ToggleButton" TargetType="{x:Type ToggleButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Grid Background="Transparent" SnapsToDevicePixels="False">
                        <Ellipse
                            x:Name="circle"
                            Width="19"
                            Height="19"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Fill="{Binding Path=(helpers:CardHelper.ToggleCircleFill), RelativeSource={RelativeSource AncestorType={x:Type layouts:Card}}}"
                            Stroke="{Binding Path=(helpers:CardHelper.ToggleCircleStroke), RelativeSource={RelativeSource AncestorType={x:Type layouts:Card}}}" />
                        <Path
                            x:Name="arrow"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Data="M 1,4.5 L 4.5,1 L 8,4.5"
                            SnapsToDevicePixels="false"
                            Stroke="{Binding Path=(helpers:CardHelper.ToggleArrowStroke), RelativeSource={RelativeSource AncestorType={x:Type layouts:Card}}}"
                            StrokeThickness="2" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter TargetName="arrow" Property="Data" Value="M 1,1.5 L 4.5,5 L 8,1.5" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="circle" Property="Stroke" Value="{Binding Path=(helpers:CardHelper.ToggleCircleStrokeMouseOver), RelativeSource={RelativeSource AncestorType={x:Type layouts:Card}}}" />
                            <Setter TargetName="circle" Property="Fill" Value="{Binding Path=(helpers:CardHelper.ToggleCircleFillMouseOver), RelativeSource={RelativeSource AncestorType={x:Type layouts:Card}}}" />
                            <Setter TargetName="arrow" Property="Stroke" Value="{Binding Path=(helpers:CardHelper.ToggleArrowStrokeMouseOver), RelativeSource={RelativeSource AncestorType={x:Type layouts:Card}}}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="circle" Property="Stroke" Value="{Binding Path=(helpers:CardHelper.ToggleCircleStrokePressed), RelativeSource={RelativeSource AncestorType={x:Type layouts:Card}}}" />
                            <Setter TargetName="circle" Property="StrokeThickness" Value="1.5" />
                            <Setter TargetName="circle" Property="Fill" Value="{Binding Path=(helpers:CardHelper.ToggleCircleFillPressed), RelativeSource={RelativeSource AncestorType={x:Type layouts:Card}}}" />
                            <Setter TargetName="arrow" Property="Stroke" Value="{Binding Path=(helpers:CardHelper.ToggleArrowStrokePressed), RelativeSource={RelativeSource AncestorType={x:Type layouts:Card}}}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="circle" Property="Stroke" Value="{Binding Path=(helpers:CardHelper.ToggleCircleStrokeDisabled), RelativeSource={RelativeSource AncestorType={x:Type layouts:Card}}}" />
                            <Setter TargetName="circle" Property="Fill" Value="{Binding Path=(helpers:CardHelper.ToggleCircleFillDisabled), RelativeSource={RelativeSource AncestorType={x:Type layouts:Card}}}" />
                            <Setter TargetName="arrow" Property="Stroke" Value="{Binding Path=(helpers:CardHelper.ToggleArrowStrokeDisabled), RelativeSource={RelativeSource AncestorType={x:Type layouts:Card}}}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="AtcApps.Styles.Card" TargetType="{x:Type layouts:Card}">
        <Setter Property="Background" Value="{DynamicResource AtcApps.Brushes.ThemeBackground}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AtcApps.Brushes.Gray8}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="ContentPadding" Value="12" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Effect" Value="{StaticResource AtcApps.Effects.Card.Elevation2}" />
        <Setter Property="Elevation" Value="2" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Foreground" Value="{DynamicResource AtcApps.Brushes.Text}" />
        <Setter Property="FooterBackground" Value="{DynamicResource AtcApps.Brushes.Accent}" />
        <Setter Property="FooterPadding" Value="12" />
        <Setter Property="HeaderBackground" Value="{DynamicResource AtcApps.Brushes.Accent}" />
        <Setter Property="HeaderForeground" Value="{x:Null}" />
        <Setter Property="HeaderPadding" Value="12" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <!--  Toggle button static state  -->
        <Setter Property="helpers:CardHelper.ToggleCircleFill" Value="{DynamicResource Expander.Static.Circle.Fill}" />
        <Setter Property="helpers:CardHelper.ToggleCircleStroke" Value="{DynamicResource Expander.Static.Circle.Stroke}" />
        <Setter Property="helpers:CardHelper.ToggleArrowStroke" Value="{DynamicResource Expander.Static.Arrow.Stroke}" />
        <!--  Toggle button mouse over state  -->
        <Setter Property="helpers:CardHelper.ToggleCircleFillMouseOver" Value="{DynamicResource Expander.MouseOver.Circle.Fill}" />
        <Setter Property="helpers:CardHelper.ToggleCircleStrokeMouseOver" Value="{DynamicResource Expander.MouseOver.Circle.Stroke}" />
        <Setter Property="helpers:CardHelper.ToggleArrowStrokeMouseOver" Value="{DynamicResource Expander.MouseOver.Arrow.Stroke}" />
        <!--  Toggle button pressed state  -->
        <Setter Property="helpers:CardHelper.ToggleCircleFillPressed" Value="{DynamicResource Expander.Pressed.Circle.Fill}" />
        <Setter Property="helpers:CardHelper.ToggleCircleStrokePressed" Value="{DynamicResource Expander.Pressed.Circle.Stroke}" />
        <Setter Property="helpers:CardHelper.ToggleArrowStrokePressed" Value="{DynamicResource Expander.Pressed.Arrow.Stroke}" />
        <!--  Toggle button disabled state  -->
        <Setter Property="helpers:CardHelper.ToggleCircleFillDisabled" Value="{DynamicResource Expander.Disabled.Circle.Fill}" />
        <Setter Property="helpers:CardHelper.ToggleCircleStrokeDisabled" Value="{DynamicResource Expander.Disabled.Circle.Stroke}" />
        <Setter Property="helpers:CardHelper.ToggleArrowStrokeDisabled" Value="{DynamicResource Expander.Disabled.Arrow.Stroke}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type layouts:Card}">
                    <Border
                        x:Name="CardBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Effect="{TemplateBinding Effect}"
                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                        UseLayoutRounding="True">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition x:Name="HeaderRow" Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition x:Name="FooterRow" Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  Header  -->
                            <Border
                                x:Name="HeaderBorder"
                                Grid.Row="0"
                                Background="{TemplateBinding HeaderBackground}"
                                CornerRadius="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=CornerRadius, Converter={x:Static valueConverters:CornerRadiusBindingValueConverter.Instance}, ConverterParameter={x:Static enums:RadiusType.Bottom}}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                UseLayoutRounding="True">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition x:Name="ToggleButtonColumn" Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition x:Name="ToggleButtonRightColumn" Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <ToggleButton
                                        x:Name="ExpanderToggleButton"
                                        Grid.Column="0"
                                        Margin="4,0,4,0"
                                        VerticalAlignment="Center"
                                        IsChecked="{Binding IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        Style="{StaticResource AtcApps.Styles.Card.ToggleButton}"
                                        Visibility="Collapsed" />

                                    <ContentPresenter
                                        x:Name="HeaderContent"
                                        Grid.Column="1"
                                        Margin="{TemplateBinding HeaderPadding}"
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="Center"
                                        ContentSource="Header"
                                        ContentStringFormat="{TemplateBinding HeaderStringFormat}"
                                        ContentTemplate="{TemplateBinding HeaderTemplate}"
                                        ContentTemplateSelector="{TemplateBinding HeaderTemplateSelector}"
                                        RecognizesAccessKey="True"
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                        UseLayoutRounding="False">
                                        <TextElement.Foreground>
                                            <MultiBinding Converter="{x:Static atcValueConverters:BackgroundToForegroundValueConverter.Instance}">
                                                <Binding
                                                    Mode="OneWay"
                                                    Path="HeaderBackground"
                                                    RelativeSource="{RelativeSource TemplatedParent}" />
                                                <Binding
                                                    Mode="OneWay"
                                                    Path="HeaderForeground"
                                                    RelativeSource="{RelativeSource TemplatedParent}" />
                                            </MultiBinding>
                                        </TextElement.Foreground>
                                    </ContentPresenter>
                                </Grid>
                            </Border>

                            <!--  Content  -->
                            <Border
                                x:Name="ContentBorder"
                                Grid.Row="1"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                UseLayoutRounding="True"
                                Visibility="Visible">
                                <ContentPresenter
                                    Margin="{TemplateBinding ContentPadding}"
                                    Content="{TemplateBinding Content}"
                                    ContentTemplate="{TemplateBinding ContentTemplate}"
                                    Cursor="{TemplateBinding Cursor}"
                                    UseLayoutRounding="False" />
                            </Border>

                            <!--  Footer  -->
                            <Border
                                x:Name="FooterBorder"
                                Grid.Row="2"
                                Background="{TemplateBinding FooterBackground}"
                                CornerRadius="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=CornerRadius, Converter={x:Static valueConverters:CornerRadiusBindingValueConverter.Instance}, ConverterParameter={x:Static enums:RadiusType.Top}}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                UseLayoutRounding="True"
                                Visibility="Collapsed">
                                <ContentPresenter
                                    Margin="{TemplateBinding FooterPadding}"
                                    Content="{TemplateBinding Footer}"
                                    ContentTemplate="{TemplateBinding FooterTemplate}"
                                    UseLayoutRounding="False" />
                            </Border>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!--  Show toggle button when expandable  -->
                        <Trigger Property="IsExpandable" Value="True">
                            <Setter TargetName="ExpanderToggleButton" Property="Visibility" Value="Visible" />
                        </Trigger>

                        <!--  Collapsed state  -->
                        <Trigger Property="IsExpanded" Value="False">
                            <Setter TargetName="ContentBorder" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="FooterBorder" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="HeaderBorder" Property="CornerRadius" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=CornerRadius}" />
                        </Trigger>

                        <!--  Right button placement  -->
                        <Trigger Property="ExpanderButtonLocation" Value="Right">
                            <Setter TargetName="ExpanderToggleButton" Property="Grid.Column" Value="2" />
                        </Trigger>

                        <!--  Hide header when ShowHeader is false  -->
                        <Trigger Property="ShowHeader" Value="False">
                            <Setter TargetName="HeaderBorder" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="ContentBorder" Property="CornerRadius" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=CornerRadius, Converter={x:Static valueConverters:CornerRadiusBindingValueConverter.Instance}, ConverterParameter={x:Static enums:RadiusType.Bottom}}" />
                        </Trigger>

                        <!--  Hide header when Header is null  -->
                        <Trigger Property="Header" Value="{x:Null}">
                            <Setter TargetName="HeaderBorder" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="ContentBorder" Property="CornerRadius" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=CornerRadius, Converter={x:Static valueConverters:CornerRadiusBindingValueConverter.Instance}, ConverterParameter={x:Static enums:RadiusType.Bottom}}" />
                        </Trigger>

                        <!--  Show footer when Footer is not null and ShowFooter is true  -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="ShowFooter" Value="True" />
                                <Condition Property="IsExpanded" Value="True" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter TargetName="FooterBorder" Property="Visibility" Value="Visible" />
                            </MultiTrigger.Setters>
                        </MultiTrigger>

                        <!--  Hide footer when Footer is null  -->
                        <Trigger Property="Footer" Value="{x:Null}">
                            <Setter TargetName="FooterBorder" Property="Visibility" Value="Collapsed" />
                        </Trigger>

                        <!--  Hide footer when ShowFooter is false  -->
                        <Trigger Property="ShowFooter" Value="False">
                            <Setter TargetName="FooterBorder" Property="Visibility" Value="Collapsed" />
                        </Trigger>

                        <!--  Disabled state  -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <!--  Elevation 0 - No shadow  -->
            <Trigger Property="Elevation" Value="0">
                <Setter Property="Effect" Value="{StaticResource AtcApps.Effects.Card.Elevation0}" />
            </Trigger>
            <!--  Elevation 1  -->
            <Trigger Property="Elevation" Value="1">
                <Setter Property="Effect" Value="{StaticResource AtcApps.Effects.Card.Elevation1}" />
            </Trigger>
            <!--  Elevation 2 is default, set in style setters  -->
            <!--  Elevation 3  -->
            <Trigger Property="Elevation" Value="3">
                <Setter Property="Effect" Value="{StaticResource AtcApps.Effects.Card.Elevation3}" />
            </Trigger>
            <!--  Elevation 4  -->
            <Trigger Property="Elevation" Value="4">
                <Setter Property="Effect" Value="{StaticResource AtcApps.Effects.Card.Elevation4}" />
            </Trigger>
            <!--  Elevation 5  -->
            <Trigger Property="Elevation" Value="5">
                <Setter Property="Effect" Value="{StaticResource AtcApps.Effects.Card.Elevation5}" />
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
