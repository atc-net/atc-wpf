<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atcValueConverters="https://github.com/atc-net/atc-wpf/tree/main/schemas/value-converters"
    xmlns:helpers="clr-namespace:Atc.Wpf.Controls.Helpers"
    xmlns:layouts="clr-namespace:Atc.Wpf.Controls.Layouts">

    <!--  DockRegion Toggle Button Style  -->
    <Style x:Key="AtcApps.Styles.DockRegion.ToggleButton" TargetType="{x:Type ToggleButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Grid Background="Transparent" SnapsToDevicePixels="False">
                        <Ellipse
                            x:Name="circle"
                            Width="19"
                            Height="19"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Fill="{Binding Path=(helpers:DockPanelProHelper.ToggleCircleFill), RelativeSource={RelativeSource AncestorType={x:Type layouts:DockRegion}}}"
                            Stroke="{Binding Path=(helpers:DockPanelProHelper.ToggleCircleStroke), RelativeSource={RelativeSource AncestorType={x:Type layouts:DockRegion}}}" />
                        <Path
                            x:Name="arrow"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Data="M 1,4.5 L 4.5,1 L 8,4.5"
                            SnapsToDevicePixels="false"
                            Stroke="{Binding Path=(helpers:DockPanelProHelper.ToggleArrowStroke), RelativeSource={RelativeSource AncestorType={x:Type layouts:DockRegion}}}"
                            StrokeThickness="2" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter TargetName="arrow" Property="Data" Value="M 1,1.5 L 4.5,5 L 8,1.5" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="circle" Property="Stroke" Value="{Binding Path=(helpers:DockPanelProHelper.ToggleCircleStrokeMouseOver), RelativeSource={RelativeSource AncestorType={x:Type layouts:DockRegion}}}" />
                            <Setter TargetName="circle" Property="Fill" Value="{Binding Path=(helpers:DockPanelProHelper.ToggleCircleFillMouseOver), RelativeSource={RelativeSource AncestorType={x:Type layouts:DockRegion}}}" />
                            <Setter TargetName="arrow" Property="Stroke" Value="{Binding Path=(helpers:DockPanelProHelper.ToggleArrowStrokeMouseOver), RelativeSource={RelativeSource AncestorType={x:Type layouts:DockRegion}}}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="circle" Property="Stroke" Value="{Binding Path=(helpers:DockPanelProHelper.ToggleCircleStrokePressed), RelativeSource={RelativeSource AncestorType={x:Type layouts:DockRegion}}}" />
                            <Setter TargetName="circle" Property="StrokeThickness" Value="1.5" />
                            <Setter TargetName="circle" Property="Fill" Value="{Binding Path=(helpers:DockPanelProHelper.ToggleCircleFillPressed), RelativeSource={RelativeSource AncestorType={x:Type layouts:DockRegion}}}" />
                            <Setter TargetName="arrow" Property="Stroke" Value="{Binding Path=(helpers:DockPanelProHelper.ToggleArrowStrokePressed), RelativeSource={RelativeSource AncestorType={x:Type layouts:DockRegion}}}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="circle" Property="Stroke" Value="{Binding Path=(helpers:DockPanelProHelper.ToggleCircleStrokeDisabled), RelativeSource={RelativeSource AncestorType={x:Type layouts:DockRegion}}}" />
                            <Setter TargetName="circle" Property="Fill" Value="{Binding Path=(helpers:DockPanelProHelper.ToggleCircleFillDisabled), RelativeSource={RelativeSource AncestorType={x:Type layouts:DockRegion}}}" />
                            <Setter TargetName="arrow" Property="Stroke" Value="{Binding Path=(helpers:DockPanelProHelper.ToggleArrowStrokeDisabled), RelativeSource={RelativeSource AncestorType={x:Type layouts:DockRegion}}}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  DockRegion Style  -->
    <Style x:Key="AtcApps.Styles.DockRegion" TargetType="{x:Type layouts:DockRegion}">
        <Setter Property="Background" Value="{DynamicResource AtcApps.Brushes.ThemeBackground}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AtcApps.Brushes.Gray8}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="ContentPadding" Value="0" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Foreground" Value="{DynamicResource AtcApps.Brushes.Text}" />
        <Setter Property="HeaderBackground" Value="{DynamicResource AtcApps.Brushes.Accent}" />
        <Setter Property="HeaderForeground" Value="{x:Null}" />
        <Setter Property="HeaderPadding" Value="8" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <!--  Toggle button static state  -->
        <Setter Property="helpers:DockPanelProHelper.ToggleCircleFill" Value="{DynamicResource Expander.Static.Circle.Fill}" />
        <Setter Property="helpers:DockPanelProHelper.ToggleCircleStroke" Value="{DynamicResource Expander.Static.Circle.Stroke}" />
        <Setter Property="helpers:DockPanelProHelper.ToggleArrowStroke" Value="{DynamicResource Expander.Static.Arrow.Stroke}" />
        <!--  Toggle button mouse over state  -->
        <Setter Property="helpers:DockPanelProHelper.ToggleCircleFillMouseOver" Value="{DynamicResource Expander.MouseOver.Circle.Fill}" />
        <Setter Property="helpers:DockPanelProHelper.ToggleCircleStrokeMouseOver" Value="{DynamicResource Expander.MouseOver.Circle.Stroke}" />
        <Setter Property="helpers:DockPanelProHelper.ToggleArrowStrokeMouseOver" Value="{DynamicResource Expander.MouseOver.Arrow.Stroke}" />
        <!--  Toggle button pressed state  -->
        <Setter Property="helpers:DockPanelProHelper.ToggleCircleFillPressed" Value="{DynamicResource Expander.Pressed.Circle.Fill}" />
        <Setter Property="helpers:DockPanelProHelper.ToggleCircleStrokePressed" Value="{DynamicResource Expander.Pressed.Circle.Stroke}" />
        <Setter Property="helpers:DockPanelProHelper.ToggleArrowStrokePressed" Value="{DynamicResource Expander.Pressed.Arrow.Stroke}" />
        <!--  Toggle button disabled state  -->
        <Setter Property="helpers:DockPanelProHelper.ToggleCircleFillDisabled" Value="{DynamicResource Expander.Disabled.Circle.Fill}" />
        <Setter Property="helpers:DockPanelProHelper.ToggleCircleStrokeDisabled" Value="{DynamicResource Expander.Disabled.Circle.Stroke}" />
        <Setter Property="helpers:DockPanelProHelper.ToggleArrowStrokeDisabled" Value="{DynamicResource Expander.Disabled.Arrow.Stroke}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type layouts:DockRegion}">
                    <Border
                        x:Name="RegionBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                        UseLayoutRounding="True">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition x:Name="HeaderRow" Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  Header  -->
                            <Border
                                x:Name="HeaderBorder"
                                Grid.Row="0"
                                Background="{TemplateBinding HeaderBackground}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                UseLayoutRounding="True">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition x:Name="ToggleButtonColumn" Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <ToggleButton
                                        x:Name="ExpanderToggleButton"
                                        Grid.Column="0"
                                        Margin="4,0,4,0"
                                        VerticalAlignment="Center"
                                        IsChecked="{Binding IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        Style="{StaticResource AtcApps.Styles.DockRegion.ToggleButton}"
                                        Visibility="Collapsed" />

                                    <ContentPresenter
                                        x:Name="HeaderContent"
                                        Grid.Column="1"
                                        Margin="{TemplateBinding HeaderPadding}"
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="Center"
                                        ContentSource="Header"
                                        ContentStringFormat="{TemplateBinding HeaderStringFormat}"
                                        ContentTemplate="{TemplateBinding HeaderTemplate}"
                                        ContentTemplateSelector="{TemplateBinding HeaderTemplateSelector}"
                                        RecognizesAccessKey="True"
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                        UseLayoutRounding="False">
                                        <TextElement.Foreground>
                                            <MultiBinding Converter="{x:Static atcValueConverters:BackgroundToForegroundValueConverter.Instance}">
                                                <Binding
                                                    Mode="OneWay"
                                                    Path="HeaderBackground"
                                                    RelativeSource="{RelativeSource TemplatedParent}" />
                                                <Binding
                                                    Mode="OneWay"
                                                    Path="HeaderForeground"
                                                    RelativeSource="{RelativeSource TemplatedParent}" />
                                            </MultiBinding>
                                        </TextElement.Foreground>
                                    </ContentPresenter>
                                </Grid>
                            </Border>

                            <!--  Content  -->
                            <Border
                                x:Name="ContentBorder"
                                Grid.Row="1"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                UseLayoutRounding="True"
                                Visibility="Visible">
                                <ContentPresenter
                                    Margin="{TemplateBinding ContentPadding}"
                                    Content="{TemplateBinding Content}"
                                    ContentTemplate="{TemplateBinding ContentTemplate}"
                                    Cursor="{TemplateBinding Cursor}"
                                    UseLayoutRounding="False" />
                            </Border>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!--  Show toggle button when collapsible  -->
                        <Trigger Property="IsCollapsible" Value="True">
                            <Setter TargetName="ExpanderToggleButton" Property="Visibility" Value="Visible" />
                        </Trigger>

                        <!--  Collapsed state  -->
                        <Trigger Property="IsExpanded" Value="False">
                            <Setter TargetName="ContentBorder" Property="Visibility" Value="Collapsed" />
                        </Trigger>

                        <!--  Hide header when Header is null  -->
                        <Trigger Property="Header" Value="{x:Null}">
                            <Setter TargetName="HeaderBorder" Property="Visibility" Value="Collapsed" />
                        </Trigger>

                        <!--  Disabled state  -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  DockPanelPro Style  -->
    <Style x:Key="AtcApps.Styles.DockPanelPro" TargetType="{x:Type layouts:DockPanelPro}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="SplitterBackground" Value="{DynamicResource AtcApps.Brushes.Gray8}" />
        <Setter Property="SplitterThickness" Value="5" />
        <Setter Property="helpers:DockPanelProHelper.SplitterBackgroundHover" Value="{DynamicResource AtcApps.Brushes.Accent}" />
        <Setter Property="helpers:DockPanelProHelper.SplitterBackgroundDragging" Value="{DynamicResource AtcApps.Brushes.Accent}" />
    </Style>

</ResourceDictionary>