<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <Title>Atc.Wpf</Title>
    <PackageId>Atc.Wpf</PackageId>
    <PackageTags>wpf;mvvm,relaycommand</PackageTags>
    <Description>A base library for building WPF application with the MVVM design pattern.</Description>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Media\ShaderEffects\Shaders\ContrastAdjust.ps" />
    <None Remove="Media\ShaderEffects\Shaders\Desaturate.ps" />
    <None Remove="Media\ShaderEffects\Shaders\Fade.ps" />
    <None Remove="Media\ShaderEffects\Shaders\InvertColors.ps" />
    <None Remove="Media\ShaderEffects\Shaders\Monochrome.ps" />
    <None Remove="Media\ShaderEffects\Shaders\Saturate.ps" />
    <None Remove="Resource\Flags\Flat\16\DE.png" />
    <None Remove="Resource\Flags\Flat\16\DK.png" />
    <None Remove="Resource\Flags\Flat\16\GB.png" />
    <None Remove="Resource\Flags\Flat\16\US.png" />
    <None Remove="Resource\Flags\Shiny\16\DE.png" />
    <None Remove="Resource\Flags\Shiny\16\DK.png" />
    <None Remove="Resource\Flags\Shiny\16\GB.png" />
    <None Remove="Resource\Flags\Shiny\16\US.png" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resource\Flags\Flat\16\DE.png" />
    <EmbeddedResource Include="Resource\Flags\Flat\16\DK.png" />
    <EmbeddedResource Include="Resource\Flags\Flat\16\GB.png" />
    <EmbeddedResource Include="Resource\Flags\Flat\16\US.png" />
    <EmbeddedResource Include="Resource\Flags\Shiny\16\DE.png" />
    <EmbeddedResource Include="Resource\Flags\Shiny\16\DK.png" />
    <EmbeddedResource Include="Resource\Flags\Shiny\16\GB.png" />
    <EmbeddedResource Include="Resource\Flags\Shiny\16\US.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Media\ShaderEffects\Shaders\ContrastAdjust.ps" />
    <Resource Include="Media\ShaderEffects\Shaders\Desaturate.ps" />
    <Resource Include="Media\ShaderEffects\Shaders\Fade.ps" />
    <Resource Include="Media\ShaderEffects\Shaders\InvertColors.ps" />
    <Resource Include="Media\ShaderEffects\Shaders\Monochrome.ps" />
    <Resource Include="Media\ShaderEffects\Shaders\Saturate.ps" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Atc" Version="2.0.222" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resource\Miscellaneous.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Miscellaneous.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resource\Miscellaneous.da-DK.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Resource\Miscellaneous.de-DE.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Resource\Miscellaneous.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>Miscellaneous.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>