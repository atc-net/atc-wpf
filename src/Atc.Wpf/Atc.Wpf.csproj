<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <Title>Atc.Wpf</Title>
    <PackageId>Atc.Wpf</PackageId>
    <PackageTags>wpf;mvvm,relaycommand</PackageTags>
    <Description>A base library for building WPF application with the MVVM design pattern.</Description>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Media\ShaderEffects\Shaders\ContrastAdjust.ps" />
    <None Remove="Media\ShaderEffects\Shaders\Desaturate.ps" />
    <None Remove="Media\ShaderEffects\Shaders\Fade.ps" />
    <None Remove="Media\ShaderEffects\Shaders\InvertColors.ps" />
    <None Remove="Media\ShaderEffects\Shaders\Monochrome.ps" />
    <None Remove="Media\ShaderEffects\Shaders\Saturate.ps" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Media\ShaderEffects\Shaders\ContrastAdjust.ps" />
    <Resource Include="Media\ShaderEffects\Shaders\Desaturate.ps" />
    <Resource Include="Media\ShaderEffects\Shaders\Fade.ps" />
    <Resource Include="Media\ShaderEffects\Shaders\InvertColors.ps" />
    <Resource Include="Media\ShaderEffects\Shaders\Monochrome.ps" />
    <Resource Include="Media\ShaderEffects\Shaders\Saturate.ps" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Atc" Version="2.0.209" />
  </ItemGroup>

</Project>